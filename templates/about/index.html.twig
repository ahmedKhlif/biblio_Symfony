            list-style: none;
            gap: 30px;
        }

        .navbar-menu a {
            text-decoration: none;
            color: var(--dark);
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .navbar-menu a:hover {
            color: var(--primary);
        }

        .navbar-actions {
