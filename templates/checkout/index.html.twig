<script src="https://js.stripe.com/v3/"></script>
<script>
let clientSecret = null;
let stripe = null;
let elements = null;

document.addEventListener('DOMContentLoaded', async function() {
    // Payment method selection
    const paymentMethodCards = document.querySelectorAll('.payment-method-card');
    const paymentMethodInput = document.getElementById('payment-method');
    const billingInfoSection = document.getElementById('billing-info-section');

    paymentMethodCards.forEach(card => {
        card.addEventListener('click', function() {
            // Remove active class from all cards
            paymentMethodCards.forEach(c => c.classList.remove('active'));
            // Add active class to clicked card
            this.classList.add('active');
            // Update hidden input
            const selectedMethod = this.getAttribute('data-method');
            paymentMethodInput.value = selectedMethod;
            console.log('Payment method selected:', selectedMethod);

            // Show/Hide billing information based on payment method
            // Show billing info for non-Stripe methods
            if (selectedMethod === 'stripe') {
                billingInfoSection.style.display = 'none';
                console.log('Stripe selected - hiding billing info');
            } else {
                billingInfoSection.style.display = 'block';
                console.log('Non-Stripe method selected - showing billing info');
            }
        });
    });

    stripe = Stripe('{{ stripe_publishable_key }}');
    const form = document.getElementById('payment-form');
    const submitButton = document.getElementById('submit-payment');
    const buttonText = document.getElementById('button-text');
    const paymentMessage = document.getElementById('payment-message');

    try {
        // Only initialize Stripe if payment method is Stripe
        const selectedPaymentMethod = paymentMethodInput.value;
        
        if (selectedPaymentMethod === 'stripe') {
            // Step 1: Create payment intent first
            console.log('Creating payment intent...');
            const createResponse = await fetch('{{ path('app_checkout_create_payment_intent') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ payment_method: 'stripe' })
            });

            const createData = await createResponse.json();

            if (!createResponse.ok) {
                throw new Error(createData.error || 'Erreur lors de la cr√©ation du paiement');
            }

            clientSecret = createData.clientSecret;
            console.log('Payment intent created with secret:', clientSecret);

            // Step 2: Now create elements and mount payment element
            elements = stripe.elements({ clientSecret: clientSecret });
            const paymentElement = elements.create('payment');
            paymentElement.mount('#payment-element');
            console.log('Payment element mounted');
        } else {
            console.log('Non-Stripe payment method selected, skipping Stripe setup');
        }

    } catch (error) {
        console.error('Setup error:', error);
        showMessage({
            type: 'error',
            message: 'Erreur lors du chargement du formulaire de paiement: ' + error.message
        });
        submitButton.disabled = true;
    }

    form.addEventListener('submit', async function(event) {
        event.preventDefault();

        const selectedPaymentMethod = paymentMethodInput.value;

        // If payment method is not Stripe, submit form to create order directly
        if (selectedPaymentMethod !== 'stripe') {
            submitButton.disabled = true;
            const originalText = buttonText.textContent;
            buttonText.innerHTML = '<span class="loading-spinner"></span> Cr√©ation de la commande...';

            try {
                const response = await fetch('{{ path('app_checkout_create_payment_intent') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: 'payment_method=' + encodeURIComponent(selectedPaymentMethod)
                });

                const data = await response.json();

                if (data.success) {
                    showMessage({
                        type: 'success',
                        message: 'Commande cr√©√©e avec succ√®s ! Redirection...'
                    });
                    setTimeout(() => {
                        window.location.href = data.redirect;
                    }, 1500);
                } else {
                    showMessage({
                        type: 'error',
                        message: data.error || 'Erreur lors de la cr√©ation de la commande'
                    });
                    submitButton.disabled = false;
                    buttonText.textContent = originalText;
                }
            } catch (error) {
                showMessage({
                    type: 'error',
                    message: error.message || 'Une erreur est survenue'
                });
                submitButton.disabled = false;
                buttonText.textContent = originalText;
            }
            return;
        }

        if (!clientSecret || !stripe || !elements) {
            showMessage({
                type: 'error',
                message: 'Le formulaire de paiement n\'est pas correctement charg√©. Veuillez rafra√Æchir la page.'
            });
            return;
        }

        submitButton.disabled = true;
        const originalText = buttonText.textContent;
        buttonText.innerHTML = '<span class="loading-spinner"></span> Traitement du paiement...';

        try {
            console.log('Confirming payment...');
            const { error, paymentIntent } = await stripe.confirmPayment({
                elements,
                confirmParams: {
                    return_url: '{{ url('app_checkout_success') }}',
                },
                redirect: 'if_required',
            });

            if (error) {
                console.error('Payment error:', error);
                showMessage({
                    type: 'error',
                    message: error.message || 'Le paiement a √©chou√©. Veuillez r√©essayer.'
                });
                submitButton.disabled = false;
                buttonText.textContent = originalText;
            } else if (paymentIntent && paymentIntent.status === 'succeeded') {
                console.log('Payment succeeded');
                showMessage({
                    type: 'success',
                    message: 'Paiement r√©ussi ! Redirection...'
                });
                window.location.href = '{{ url('app_checkout_success') }}?payment_intent=' + paymentIntent.id;
            } else if (paymentIntent && paymentIntent.status === 'requires_action') {
                console.log('Payment requires action');
                showMessage({
                    type: 'info',
                    message: 'Authentification suppl√©mentaire requise. Veuillez suivre les instructions.'
                });
            } else {
                console.log('Payment intent status:', paymentIntent?.status);
                window.location.href = '{{ url('app_checkout_success') }}?payment_intent=' + paymentIntent.id;
            }

        } catch (error) {
            console.error('Payment submission error:', error);
            showMessage({
                type: 'error',
                message: error.message || 'Une erreur est survenue lors du paiement.'
            });
            submitButton.disabled = false;
            buttonText.textContent = originalText;
        }
    });

    function showMessage(options) {
        paymentMessage.style.display = 'block';
        
        if (options.type === 'error') {
            paymentMessage.className = 'alert alert-danger';
            paymentMessage.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i>' + options.message;
        } else if (options.type === 'info') {
            paymentMessage.className = 'alert alert-info';
            paymentMessage.innerHTML = '<i class="fas fa-info-circle mr-2"></i>' + options.message;
        } else if (options.type === 'success') {
            paymentMessage.className = 'alert alert-success';
            paymentMessage.innerHTML = '<i class="fas fa-check-circle mr-2"></i>' + options.message;
        }
    }
});
</script>

