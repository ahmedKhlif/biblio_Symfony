{% extends 'backendofficebase.html.twig' %}

{% block title %}Commande {{ order.orderNumber }} - Biblio{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-receipt text-primary mr-2"></i>Commande {{ order.orderNumber }}
            </h1>
            <p class="mb-0 text-muted">Détails de votre commande</p>
        </div>
        <div>
            <a href="{{ path('app_livre_index') }}" class="btn btn-primary">
                <i class="fas fa-book mr-1"></i>Continuer mes achats
            </a>
        </div>
    </div>

    <!-- Order Status -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-1">Statut de la commande</h5>
                            <span class="badge badge-{{ order.status == 'delivered' ? 'success' : (order.status == 'pending' ? 'warning' : 'info') }} badge-lg">
                                {{ order.statusLabel }}
                            </span>
                        </div>
                        <div class="col-md-6 text-md-right">
                            <small class="text-muted">Commande passée le {{ order.createdAt|date('d/m/Y à H:i') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Order Items -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list mr-2"></i>Articles commandés
                    </h6>
                </div>
                <div class="card-body">
                    {% for item in order.orderItems %}
                        <div class="row mb-3 pb-3 border-bottom">
                            <div class="col-md-2">
                                {% if item.livre.image %}
                                    <img src="{{ asset('uploads/images/' ~ item.livre.image) }}" alt="{{ item.livre.titre }}" class="img-fluid rounded" style="max-height: 60px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 60px; width: 60px;">
                                        <i class="fas fa-book fa-lg text-gray-300"></i>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-6">
                                <h6 class="font-weight-bold mb-1">{{ item.livre.titre }}</h6>
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-user mr-1"></i>{{ item.livre.auteur ? item.livre.auteur.prenom ~ ' ' ~ item.livre.auteur.nom : 'Auteur inconnu' }}
                                </p>
                            </div>
                            <div class="col-md-2 text-center">
                                <span class="badge badge-primary">{{ item.quantity }}</span>
                            </div>
                            <div class="col-md-2 text-right">
                                <span class="font-weight-bold">{{ item.getFormattedSubtotal() }}</span>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="row mt-3">
                        <div class="col-md-8"></div>
                        <div class="col-md-4">
                            <div class="border-top pt-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Sous-total</span>
                                    <span>{{ order.getFormattedTotalAmount() }}</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Frais de port</span>
                                    <span class="text-success">Gratuit</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span class="font-weight-bold h5">Total</span>
                                    <span class="font-weight-bold text-primary h5">{{ order.getFormattedTotalAmount() }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Details -->
        <div class="col-lg-4">
            <!-- Shipping Address -->
            <div class="card shadow mb-3">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-truck mr-2"></i>Adresse de livraison
                    </h6>
                </div>
                <div class="card-body">
                    {% set address = order.shippingAddress %}
                    <p class="mb-1"><strong>{{ address.first_name }} {{ address.last_name }}</strong></p>
                    <p class="mb-1">{{ address.address }}</p>
                    <p class="mb-1">{{ address.postal_code }} {{ address.city }}</p>
                    <p class="mb-0">{{ address.country }}</p>
                    {% if address.phone %}
                        <p class="mb-0"><i class="fas fa-phone mr-1"></i>{{ address.phone }}</p>
                    {% endif %}
                </div>
            </div>

            <!-- Order Info -->
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Informations commande
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Numéro de commande</small>
                        <br>
                        <span class="font-weight-bold">{{ order.orderNumber }}</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Date de commande</small>
                        <br>
                        <span>{{ order.createdAt|date('d/m/Y H:i') }}</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted">Mode de paiement</small>
                        <br>
                        <span>Carte bancaire</span>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted">Statut</small>
                        <br>
                        <span class="badge badge-{{ order.status == 'delivered' ? 'success' : (order.status == 'pending' ? 'warning' : 'info') }}">
                            {{ order.statusLabel }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            {% if order.status == 'delivered' %}
            <div class="card shadow mt-3">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h6 class="text-success">Commande livrée</h6>
                    <p class="text-muted small">Merci pour votre achat !</p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}