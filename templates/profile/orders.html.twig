{% extends 'backendofficebase.html.twig' %}

{% block title %}Mes Commandes - Biblio{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-shopping-cart text-primary mr-2"></i>Mes Commandes
            </h1>
            <p class="mb-0 text-muted">Suivez l'état de vos commandes</p>
        </div>
        <a href="{{ path('app_cart_index') }}" class="btn btn-primary">
            <i class="fas fa-cart-plus mr-2"></i>Continuer mes achats
        </a>
    </div>

    {% if orders|length > 0 %}
        <div class="row">
            {% for order in orders %}
                <div class="col-lg-12 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
                            <div>
                                <h6 class="m-0 font-weight-bold text-primary">
                                    <i class="fas fa-receipt mr-2"></i>Commande #{{ order.orderNumber }}
                                </h6>
                                <small class="text-muted">
                                    <i class="fas fa-calendar mr-1"></i>{{ order.createdAt|date('d/m/Y à H:i') }}
                                </small>
                            </div>
                            <div class="text-right">
                                {% set statusClass = {
                                    'pending': 'warning',
                                    'paid': 'info',
                                    'processing': 'warning',
                                    'shipped': 'primary',
                                    'delivered': 'success',
                                    'cancelled': 'danger',
                                    'refunded': 'secondary'
                                }[order.status] ?? 'secondary' %}
                                <span class="badge badge-{{ statusClass }} badge-lg">
                                    <i class="fas fa-circle mr-1"></i>{{ order.statusLabel }}
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="font-weight-bold text-dark mb-3">Articles commandés</h6>
                                    {% for orderItem in order.orderItems %}
                                        <div class="d-flex align-items-center mb-3 p-2 border rounded">
                                            <div class="flex-shrink-0 mr-3">
                                                {% if orderItem.livre.image %}
                                                    <img src="{{ asset('uploads/images/' ~ orderItem.livre.image) }}"
                                                         alt="{{ orderItem.livre.titre }}"
                                                         class="rounded" style="width: 50px; height: 70px; object-fit: cover;">
                                                {% else %}
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                         style="width: 50px; height: 70px;">
                                                        <i class="fas fa-book text-muted"></i>
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">{{ orderItem.livre.titre }}</h6>
                                                <p class="mb-1 text-muted small">
                                                    Par {{ orderItem.livre.auteur.prenom }} {{ orderItem.livre.auteur.nom }}
                                                </p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="text-muted">Quantité: {{ orderItem.quantity }}</span>
                                                    <span class="font-weight-bold">{{ orderItem.formattedUnitPrice }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="col-md-4">
                                    <div class="bg-light p-3 rounded">
                                        <h6 class="font-weight-bold text-dark mb-3">Détails de la commande</h6>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Sous-total:</span>
                                            <span>{{ order.totalAmountFloat|number_format(2, ',', ' ') }} €</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Livraison:</span>
                                            <span>Gratuite</span>
                                        </div>
                                        {% if order.paymentMethod %}
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Moyen de paiement:</span>
                                                <span class="badge badge-info">{{ order.paymentMethodLabel }}</span>
                                            </div>
                                        {% endif %}
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <strong>Total:</strong>
                                            <strong class="text-primary">{{ order.formattedTotalAmount }}</strong>
                                        </div>

                                        {% if order.shippingAddress %}
                                            <div class="mt-3">
                                                <h6 class="font-weight-bold text-dark mb-2">Adresse de livraison</h6>
                                                <address class="small text-muted mb-0">
                                                    {{ order.shippingAddress.firstName }} {{ order.shippingAddress.lastName }}<br>
                                                    {{ order.shippingAddress.address }}<br>
                                                    {{ order.shippingAddress.postalCode }} {{ order.shippingAddress.city }}<br>
                                                    {{ order.shippingAddress.country }}
                                                </address>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <!-- Order Status Timeline -->
                                    <div class="mt-3">
                                        <h6 class="font-weight-bold text-dark mb-3">État de la commande</h6>
                                        <div class="timeline">
                                            {% set statuses = [
                                                {'key': 'pending', 'label': 'En attente', 'icon': 'fas fa-clock', 'date': order.createdAt},
                                                {'key': 'paid', 'label': 'Payée', 'icon': 'fas fa-credit-card', 'date': order.paidAt},
                                                {'key': 'shipped', 'label': 'Expédiée', 'icon': 'fas fa-truck', 'date': order.shippedAt},
                                                {'key': 'delivered', 'label': 'Livrée', 'icon': 'fas fa-box-open', 'date': order.deliveredAt}
                                            ] %}

                                            {% for statusItem in statuses %}
                                                <div class="timeline-item {% if order.status == statusItem.key or (order.status == 'cancelled' and loop.index == 1) %}active{% endif %}">
                                                    <div class="timeline-marker">
                                                        <i class="{{ statusItem.icon }}"></i>
                                                    </div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">{{ statusItem.label }}</h6>
                                                        {% if statusItem.date %}
                                                            <small class="text-muted">{{ statusItem.date|date('d/m/Y H:i') }}</small>
                                                        {% elseif order.status == statusItem.key %}
                                                            <small class="text-primary">En cours</small>
                                                        {% else %}
                                                            <small class="text-muted">En attente</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        {% if order.status == 'delivered' %}
                            <div class="card-footer bg-success text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check-circle mr-2"></i>Commande livrée avec succès !</span>
                                    <small>{{ order.deliveredAt|date('d/m/Y') }}</small>
                                </div>
                            </div>
                        {% elseif order.status == 'cancelled' %}
                            <div class="card-footer bg-danger text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-times-circle mr-2"></i>Commande annulée</span>
                                    <small>{{ order.cancelledAt ? order.cancelledAt|date('d/m/Y') : '' }}</small>
                                </div>
                            </div>
                        {% else %}
                            <div class="card-footer bg-light d-flex justify-content-end gap-2 p-3">
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info" title="Voir les détails">
                                    <i class="fas fa-eye mr-1"></i>Détails
                                </a>
                                <a href="{{ path('app_order_print', {'id': order.id}) }}" class="btn btn-sm btn-primary" target="_blank" title="Imprimer">
                                    <i class="fas fa-print mr-1"></i>Imprimer
                                </a>
                                <a href="{{ path('app_order_invoice', {'id': order.id}) }}" class="btn btn-sm btn-success" target="_blank" title="Télécharger la facture">
                                    <i class="fas fa-file-pdf mr-1"></i>Facture
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h4 class="text-muted mb-3">Aucune commande trouvée</h4>
                <p class="text-muted mb-4">Vous n'avez pas encore passé de commande.</p>
                <a href="{{ path('app_livre_index') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-book mr-2"></i>Commencer mes achats
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e3e6f0;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-item.active .timeline-marker {
    background-color: #009688;
    border-color: #009688;
}

.timeline-item.active .timeline-content h6 {
    color: #009688;
}

.timeline-marker {
    position: absolute;
    left: -22px;
    top: 0;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background-color: #fff;
    border: 2px solid #e3e6f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 8px;
    color: #fff;
}

.timeline-content h6 {
    margin-bottom: 2px;
    font-size: 14px;
    color: #6c757d;
}

.badge-lg {
    font-size: 0.875rem;
    padding: 0.5rem 0.75rem;
}
</style>
{% endblock %}