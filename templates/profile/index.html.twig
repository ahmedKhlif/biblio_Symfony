{% extends 'backendofficebase.html.twig' %}

{% block title %}Mon Profil - Biblio{% endblock %}

{% block body %}
    <style>
        /* Modern Drag & Drop Upload Styles */
        .upload-area {
            border: 2px dashed #009688;
            border-radius: 15px;
            padding: 40px 20px;
            text-align: center;
            background: linear-gradient(135deg, #f8f9fc 0%, #e9ecef 100%);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .upload-area:hover {
            border-color: #00796b;
            background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 150, 136, 0.15);
        }

        .upload-area.dragover {
            border-color: #004d40;
            background: linear-gradient(135deg, #00796b 0%, #004d40 100%);
            color: white;
        }

        .upload-area.dragover .upload-icon i {
            color: white;
        }

        .upload-area.dragover .upload-title,
        .upload-area.dragover .upload-subtitle {
            color: white;
        }

        .upload-content {
            position: relative;
            z-index: 2;
        }

        .upload-icon {
            margin-bottom: 20px;
        }

        .upload-icon i {
            font-size: 3rem;
            color: #009688;
            transition: all 0.3s ease;
        }

        .upload-title {
            color: #009688;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 1.1rem;
        }

        .upload-subtitle {
            color: #6c757d;
            margin-bottom: 0;
            font-size: 0.9rem;
        }

        .upload-link {
            color: #009688;
            font-weight: 600;
            text-decoration: underline;
            cursor: pointer;
        }

        .upload-link:hover {
            color: #00796b;
        }

        .upload-preview {
            position: relative;
            display: inline-block;
            width: 100%;
            text-align: center;
            padding: 20px 0;
        }

        .preview-img {
            max-width: 200px;
            max-height: 200px;
            border-radius: 10px;
            object-fit: cover;
            border: 3px solid #009688;
            display: block;
            margin: 0 auto;
        }

        .preview-overlay {
            position: absolute;
            top: 5px;
            right: 5px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .upload-preview:hover .preview-overlay {
            opacity: 1;
        }

        .remove-preview {
            border-radius: 50%;
            width: 30px;
            height: 30px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .upload-info {
            background: rgba(0, 150, 136, 0.1);
            border: 1px solid rgba(0, 150, 136, 0.2);
            border-radius: 8px;
            padding: 10px;
        }

        .upload-info i {
            color: #009688;
        }

        /* Loading animation */
        .upload-loading {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 3;
        }

        .upload-spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #009688;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Error states */
        .upload-error {
            border-color: #dc3545 !important;
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%) !important;
        }

        .upload-error .upload-icon i {
            color: #dc3545;
        }

        .upload-error .upload-title,
        .upload-error .upload-subtitle {
            color: #721c24;
        }

        /* Success states */
        .upload-success {
            border-color: #28a745 !important;
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%) !important;
        }

        .upload-success .upload-icon i {
            color: #28a745;
        }

        .upload-success .upload-title,
        .upload-success .upload-subtitle {
            color: #155724;
        }
    </style>

