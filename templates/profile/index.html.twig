    <!-- Drag & Drop Upload JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const uploadArea = document.getElementById('profilePictureUpload');
            const fileInput = document.getElementById('profilePictureInput');
            
            // If profilePictureInput not found, search for the actual form field
            let actualFileInput = fileInput;
            if (!actualFileInput) {
                const inputs = uploadArea.querySelectorAll('input[type="file"]');
                if (inputs.length > 0) {
                    actualFileInput = inputs[0];
                    console.log('Found file input via search:', actualFileInput.id);
                }
            }
            
            const uploadContent = uploadArea.querySelector('.upload-content');
            const uploadIcon = uploadArea.querySelector('.upload-icon i');
            const uploadTitle = uploadArea.querySelector('.upload-title');
            const uploadSubtitle = uploadArea.querySelector('.upload-subtitle');
            const uploadLink = uploadArea.querySelector('.upload-link');
            const uploadPreview = document.getElementById('uploadPreview');
            const previewImage = document.getElementById('previewImage');
            const removePreview = document.getElementById('removePreview');

            // Debug info
            console.log('Profile picture upload initialized');
            console.log('Upload area element:', uploadArea);
            console.log('File input element (profilePictureInput):', fileInput);
            console.log('Actual file input element:', actualFileInput);
            console.log('Upload link element:', uploadLink);

            // Prevent defaults for drag-drop
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, preventDefaults, false);
                document.body.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                uploadArea.addEventListener(eventName, highlight, false);
                document.body.addEventListener(eventName, function(e) {
                    if (uploadArea.contains(e.target)) {
                        highlight(e);
                    }
                }, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                uploadArea.addEventListener(eventName, unhighlight, false);
            });

            function highlight(e) {
                uploadArea.classList.add('dragover');
                console.log('Drag highlight added');
            }

            function unhighlight(e) {
                uploadArea.classList.remove('dragover');
                console.log('Drag highlight removed');
            }

            uploadArea.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;

                console.log('Files dropped:', files.length);
                if (files.length > 0) {
                    handleFiles(files);
                }
            }

            // Click to browse files
            uploadLink.addEventListener('click', function(e) {
                e.preventDefault();
                console.log('Browse link clicked');
                actualFileInput.click();
            });

            uploadArea.addEventListener('click', function(e) {
                // Only trigger file input if clicking on upload area but not on remove button
                if (!removePreview.contains(e.target)) {
                    console.log('Upload area clicked');
                    actualFileInput.click();
                }
            });

            // File input change
            actualFileInput.addEventListener('change', function(e) {
                console.log('File input changed, files count:', this.files.length);
                if (this.files.length > 0) {
                    handleFiles(this.files);
                }
            });

            function handleFiles(files) {
                const file = files[0];
                console.log('Processing file:', file.name, 'Type:', file.type, 'Size:', file.size);

                // Validate file type
                if (!file.type.startsWith('image/')) {
                    console.error('Invalid file type:', file.type);
                    showError('Veuillez sélectionner un fichier image valide.');
                    return;
                }

                // Validate file size (5MB max)
                if (file.size > 5 * 1024 * 1024) {
                    console.error('File too large:', file.size);
                    showError('La taille du fichier ne doit pas dépasser 5MB.');
                    return;
                }

                // Set file to input (this is crucial for form submission)
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);
                actualFileInput.files = dataTransfer.files;
                console.log('File set to input element');

                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    console.log('Preview generated');
                    console.log('Preview image element:', previewImage);
                    console.log('Preview container:', uploadPreview);
                    previewImage.src = e.target.result;
                    uploadContent.style.display = 'none';
                    uploadPreview.style.display = 'block';
                    uploadArea.classList.remove('upload-error');
                    uploadArea.classList.add('upload-success');
                    console.log('Preview should be visible now');
                };
                reader.readAsDataURL(file);
            }

            function showError(message) {
                console.error('Upload error:', message);
                uploadArea.classList.remove('upload-success');
                uploadArea.classList.add('upload-error');
                uploadTitle.textContent = 'Erreur de fichier';
                uploadSubtitle.innerHTML = `<span style="color: #721c24;">${message}</span>`;

                setTimeout(() => {
                    resetUploadArea();
                }, 3000);
            }

            function resetUploadArea() {
                uploadArea.classList.remove('upload-error', 'upload-success');
                uploadTitle.textContent = 'Glissez-déposez votre photo ici';
                uploadSubtitle.innerHTML = 'ou <span class="upload-link">parcourez vos fichiers</span>';
                uploadContent.style.display = 'block';
                uploadPreview.style.display = 'none';
                actualFileInput.value = '';
                console.log('Upload area reset');
            }

            // Remove preview
            removePreview.addEventListener('click', function(e) {
                e.stopPropagation();
                console.log('Preview removed');
                resetUploadArea();
            });

            // Form submission - ensure file is properly sent
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    console.log('Form submitted');
                    if (actualFileInput.files.length > 0) {
                        console.log('File attached to form:', actualFileInput.files[0].name);
                    }
                });
            }

            // Copy billing to shipping functionality
            const copyBillingBtn = document.getElementById('copyBillingToShipping');
            if (copyBillingBtn) {
                copyBillingBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Get billing form fields
                    const billingPrenom = document.getElementById('billingAddressForm_prenom').value;
                    const billingNom = document.getElementById('billingAddressForm_nom').value;
                    const billingAdresse = document.getElementById('billingAddressForm_adresse').value;
                    const billingCodePostal = document.getElementById('billingAddressForm_codePostal').value;
                    const billingVille = document.getElementById('billingAddressForm_ville').value;
                    const billingPays = document.getElementById('billingAddressForm_pays').value;
                    
                    // Copy to shipping fields
                    document.getElementById('shippingAddressForm_prenom').value = billingPrenom;
                    document.getElementById('shippingAddressForm_nom').value = billingNom;
                    document.getElementById('shippingAddressForm_adresse').value = billingAdresse;
                    document.getElementById('shippingAddressForm_codePostal').value = billingCodePostal;
                    document.getElementById('shippingAddressForm_ville').value = billingVille;
                    document.getElementById('shippingAddressForm_pays').value = billingPays;
                    
                    // Expand shipping section to show the copied data
                    const shippingCollapse = document.getElementById('shippingAddressCollapse');
                    if (shippingCollapse) {
                        shippingCollapse.classList.add('show');
                    }
                    
                    // Show success message
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-success alert-dismissible fade show';
                    alert.innerHTML = '<i class="fas fa-check-circle mr-2"></i><strong>Succès!</strong> Les données de facturation ont été copiées vers la livraison.';
                    copyBillingBtn.parentElement.insertBefore(alert, copyBillingBtn);
                    
                    setTimeout(() => {
                        alert.remove();
                    }, 3000);
                });
            }
        });
    </script>
