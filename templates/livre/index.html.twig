{% extends 'base.html.twig' %}

{% block title %}Gestion des Livres{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Gestion des Livres</h1>
        <div>
            <div class="btn-group mr-2" role="group">
                <a href="{{ path('app_livre_index', app.request.query.all|merge({'view': 'table'})) }}" class="btn btn-sm btn-outline-primary {% if app.request.get('view') != 'grid' %}active{% endif %}">
                    <i class="fas fa-table"></i> Tableau
                </a>
                <a href="{{ path('app_livre_index', app.request.query.all|merge({'view': 'grid'})) }}" class="btn btn-sm btn-outline-primary {% if app.request.get('view') == 'grid' %}active{% endif %}">
                    <i class="fas fa-th"></i> Grille
                </a>
            </div>
            <a href="{{ path('app_livre_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Ajouter un Livre
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Recherche</h6>
        </div>
        <div class="card-body">
            <form method="GET" action="{{ path('app_livre_index') }}" class="d-flex">
                <input type="text" name="search" value="{{ search|default('') }}" class="form-control" placeholder="Rechercher par titre, auteur, catégorie, éditeur ou ISBN..." style="margin-right: 10px;">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                {% if search|default('') %}
                    <a href="{{ path('app_livre_index') }}" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Effacer
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    {% if app.request.get('view') == 'grid' %}
        <!-- Grid View -->
        <div class="row">
            {% for livre in livres %}
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-2">
                            {% if livre.image %}
                                <img src="{{ asset('uploads/images/' ~ livre.image) }}" alt="{{ livre.titre }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="fas fa-book fa-4x text-gray-300"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <h6 class="card-title font-weight-bold">{{ livre.titre }}</h6>
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-user mr-1"></i>{{ livre.auteur ? livre.auteur.prenom ~ ' ' ~ livre.auteur.nom : 'Auteur inconnu' }}
                            </p>
                            <p class="card-text small text-muted mb-2">
                                <i class="fas fa-tag mr-1"></i>{{ livre.categorie ? livre.categorie.designation : 'N/A' }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="font-weight-bold text-primary">{{ livre.prix }} €</span>
                                {% if livre.nbExemplaires > 0 %}
                                    <span class="badge badge-success">
                                        <i class="fas fa-check-circle mr-1"></i>En stock
                                    </span>
                                {% else %}
                                    <span class="badge badge-danger">
                                        <i class="fas fa-times-circle mr-1"></i>Épuisé
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer p-2">
                            <div class="btn-group w-100" role="group">
                                <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <h5>Aucun livre trouvé</h5>
                        <p>Il n'y a actuellement aucun livre dans la bibliothèque.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Table View -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Livres</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    <a href="{{ path('app_livre_index', {'sort': 'id', 'direction': sort == 'id' and direction == 'asc' ? 'desc' : 'asc', 'search': search}) }}" class="text-decoration-none">
                                        ID
                                        {% if sort == 'id' %}
                                            <i class="fas fa-sort-{{ direction == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>Image</th>
                                <th>
                                    <a href="{{ path('app_livre_index', {'sort': 'titre', 'direction': sort == 'titre' and direction == 'asc' ? 'desc' : 'asc', 'search': search}) }}" class="text-decoration-none">
                                        Titre
                                        {% if sort == 'titre' %}
                                            <i class="fas fa-sort-{{ direction == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>Auteur</th>
                                <th>Catégorie</th>
                                <th>Éditeur</th>
                                <th>ISBN</th>
                                <th>
                                    <a href="{{ path('app_livre_index', {'sort': 'prix', 'direction': sort == 'prix' and direction == 'asc' ? 'desc' : 'asc', 'search': search}) }}" class="text-decoration-none">
                                        Prix
                                        {% if sort == 'prix' %}
                                            <i class="fas fa-sort-{{ direction == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for livre in livres %}
                            <tr>
                                <td>{{ livre.id }}</td>
                                <td>
                                    {% if livre.image %}
                                        <img src="{{ asset('uploads/images/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-thumbnail" style="max-width: 60px; max-height: 60px;">
                                    {% else %}
                                        <i class="fas fa-book fa-2x text-gray-300"></i>
                                    {% endif %}
                                </td>
                                <td>{{ livre.titre }}</td>
                                <td>{{ livre.auteur ? livre.auteur.prenom ~ ' ' ~ livre.auteur.nom : 'N/A' }}</td>
                                <td>{{ livre.categorie ? livre.categorie.designation : 'N/A' }}</td>
                                <td>{{ livre.editeur ? livre.editeur.nomEditeur : 'N/A' }}</td>
                                <td>{{ livre.isbn }}</td>
                                <td>{{ livre.prix }} €</td>
                                <td>
                                    {% if livre.nbExemplaires > 0 %}
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle mr-1"></i>En stock ({{ livre.nbExemplaires }})
                                        </span>
                                    {% else %}
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle mr-1"></i>Épuisé
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10" class="text-center">Aucun livre trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Pagination -->
    {% if livres.getPageCount() > 1 %}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(livres, 'pagination.html.twig') }}
        </div>
    {% endif %}
{% endblock %}