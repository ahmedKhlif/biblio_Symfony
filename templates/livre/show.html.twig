{% extends 'backendofficebase.html.twig' %}

{% block title %}Détails du Livre - {{ livre.titre }}{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">{{ livre.titre }}</h1>
            <small class="text-muted">Détails complets du livre</small>
        </div>
        <div>
            <a href="{{ path('app_livre_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
            <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
        </div>
    </div>

    <!-- Book Cover and Basic Info -->
    <div class="row mb-4">
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-gradient-primary text-white text-center py-3">
                    <h5 class="mb-0 font-weight-bold">{{ livre.titre }}</h5>
                </div>
                <div class="card-body text-center">
                    {% if livre.image %}
                        <img src="{{ asset('uploads/images/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-fluid rounded shadow mb-3" style="max-width: 250px;">
                    {% else %}
                        <div class="bg-light rounded p-4 mb-3">
                            <i class="fas fa-book fa-5x text-gray-300"></i>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        {% if livre.nbExemplaires > 0 %}
                            <span class="badge badge-success badge-pill px-3 py-2">
                                <i class="fas fa-check-circle mr-1"></i>En stock ({{ livre.nbExemplaires }})
                            </span>
                        {% else %}
                            <span class="badge badge-danger badge-pill px-3 py-2">
                                <i class="fas fa-times-circle mr-1"></i>Épuisé
                            </span>
                        {% endif %}
                    </div>

                    <h3 class="text-success font-weight-bold mb-0">{{ livre.prix }} €</h3>
                    <small class="text-muted">Prix unitaire</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Informations Principales
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">ID:</td>
                                    <td>#{{ livre.id }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Titre:</td>
                                    <td class="font-weight-bold">{{ livre.titre }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">ISBN:</td>
                                    <td>{{ livre.isbn }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Pages:</td>
                                    <td>{{ livre.nbPages }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Prix:</td>
                                    <td class="text-success font-weight-bold">{{ livre.prix }} €</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Exemplaires:</td>
                                    <td>{{ livre.nbExemplaires }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Date édition:</td>
                                    <td>{{ livre.dateEdition|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Valeur totale:</td>
                                    <td class="text-info font-weight-bold">{{ (livre.prix * livre.nbExemplaires)|number_format(2, ',', ' ') }} €</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Author Information -->
            {% if livre.auteur %}
            <div class="card shadow mb-4 border-left-success">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-user mr-2"></i>Informations sur l'Auteur
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="font-weight-bold text-success mb-2">{{ livre.auteur.prenom }} {{ livre.auteur.nom }}</h5>
                            {% if livre.auteur.biographie %}
                                <p class="text-muted mb-0">{{ livre.auteur.biographie|slice(0, 150) ~ (livre.auteur.biographie|length > 150 ? '...' : '') }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-right">
                            <a href="{{ path('app_auteur_show', {'id': livre.auteur.id}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-eye mr-1"></i>Voir le profil complet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Category Information -->
            {% if livre.categorie %}
            <div class="card shadow mb-4 border-left-info">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-tag mr-2"></i>Informations sur la Catégorie
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="font-weight-bold text-info mb-2">{{ livre.categorie.designation }}</h5>
                            {% if livre.categorie.description %}
                                <p class="text-muted mb-0">{{ livre.categorie.description }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-right">
                            <a href="{{ path('app_categorie_show', {'id': livre.categorie.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye mr-1"></i>Voir la catégorie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Publisher Information -->
            {% if livre.editeur %}
            <div class="card shadow mb-4 border-left-warning">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-building mr-2"></i>Informations sur l'Éditeur
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="font-weight-bold text-warning mb-2">{{ livre.editeur.nomEditeur }}</h5>
                            <p class="text-muted mb-1">
                                <i class="fas fa-map-marker-alt mr-1"></i>{{ livre.editeur.pays }}
                            </p>
                            <p class="text-muted mb-0">
                                <i class="fas fa-phone mr-1"></i>{{ livre.editeur.telephone }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted mb-0">
                                <i class="fas fa-address-card mr-1"></i>{{ livre.editeur.adresse }}
                            </p>
                            <div class="mt-3">
                                <a href="{{ path('app_editeur_show', {'id': livre.editeur.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-eye mr-1"></i>Voir le profil complet
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Statistics and Insights -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar mr-2"></i>Statistiques du Livre
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-copy fa-2x text-primary mb-2"></i>
                                <h4 class="text-primary">{{ livre.nbExemplaires }}</h4>
                                <small class="text-muted">Exemplaires disponibles</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-euro-sign fa-2x text-success mb-2"></i>
                                <h4 class="text-success">{{ (livre.prix * livre.nbExemplaires)|number_format(0, ',', ' ') }}€</h4>
                                <small class="text-muted">Valeur totale en stock</small>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-file-alt fa-2x text-info mb-2"></i>
                                <h4 class="text-info">{{ livre.nbPages }}</h4>
                                <small class="text-muted">Nombre de pages</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-calendar fa-2x text-warning mb-2"></i>
                                <h4 class="text-warning">{{ livre.dateEdition|date('Y') }}</h4>
                                <small class="text-muted">Année d'édition</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-lightbulb mr-2"></i>Aperçus et Informations
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-muted mb-2">Prix par page</h6>
                        <p class="mb-0">{{ (livre.prix / livre.nbPages)|number_format(3, ',', ' ') }} € par page</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-muted mb-2">État du stock</h6>
                        {% set stockPercentage = (livre.nbExemplaires / 100 * 100)|round %}
                        <div class="progress mb-2">
                            <div class="progress-bar {% if livre.nbExemplaires > 50 %}bg-success{% elseif livre.nbExemplaires > 20 %}bg-warning{% else %}bg-danger{% endif %}"
                                 role="progressbar" style="width: {{ stockPercentage > 100 ? 100 : stockPercentage }}%"
                                 aria-valuenow="{{ livre.nbExemplaires }}" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <small class="text-muted">{{ livre.nbExemplaires }} exemplaires sur 100 recommandés</small>
                    </div>
                    <hr>
                    <div class="mb-0">
                        <h6 class="font-weight-bold text-muted mb-2">Dernière mise à jour</h6>
                        <p class="mb-0 text-muted">
                            <i class="fas fa-clock mr-1"></i>Ajouté le {{ livre.dateEdition|date('d/m/Y à H:i') }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- PDF Viewer Section -->
    {% if livre.pdf %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="fas fa-file-pdf mr-2"></i>Document PDF du livre
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#pdfModal">
                            <i class="fas fa-eye mr-1"></i>Ouvrir en plein écran
                        </button>
                        <a href="{{ asset('uploads/pdfs/' ~ livre.pdf) }}" target="_blank" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-download mr-1"></i>Télécharger
                        </a>
                    </div>
                    <div class="pdf-viewer-container" style="height: 600px; border: 1px solid #ddd; border-radius: 5px;">
                        <iframe src="{{ asset('uploads/pdfs/' ~ livre.pdf) }}" width="100%" height="100%" style="border: none; border-radius: 5px;">
                            Votre navigateur ne supporte pas l'affichage des PDF. <a href="{{ asset('uploads/pdfs/' ~ livre.pdf) }}">Téléchargez le PDF</a>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- PDF Modal -->
    <div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="pdfModalLabel">
                        <i class="fas fa-file-pdf mr-2"></i>{{ livre.titre }} - Document PDF
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-0">
                    <iframe src="{{ asset('uploads/pdfs/' ~ livre.pdf) }}" width="100%" height="80vh" style="border: none;">
                        Votre navigateur ne supporte pas l'affichage des PDF. <a href="{{ asset('uploads/pdfs/' ~ livre.pdf) }}">Téléchargez le PDF</a>
                    </iframe>
                </div>
                <div class="modal-footer">
                    <a href="{{ asset('uploads/pdfs/' ~ livre.pdf) }}" target="_blank" class="btn btn-danger">
                        <i class="fas fa-download mr-1"></i>Télécharger PDF
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-cogs mr-2"></i>Actions Disponibles
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex flex-column">
                                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning btn-lg mb-2">
                                    <i class="fas fa-edit mr-2"></i>Modifier ce livre
                                </a>
                                <a href="{{ path('app_livre_index') }}" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-list mr-2"></i>Retour à la liste
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-danger">
                                <h6 class="font-weight-bold mb-2">
                                    <i class="fas fa-exclamation-triangle mr-1"></i>Zone de danger
                                </h6>
                                <p class="mb-2">La suppression de ce livre est irréversible et supprimera également toutes les données associées.</p>
                                {{ include('livre/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}