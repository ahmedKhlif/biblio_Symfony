    {% endif %}

    <!-- Audit Information - Admin Only -->
    {% if is_granted('ROLE_ADMIN') %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow border-left-danger">
                <div class="card-header py-3 bg-gradient-danger">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-shield-alt mr-2"></i>Informations d'Audit (Administrateur)
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Créé le:</td>
                                    <td>
                                        <i class="fas fa-calendar-plus text-success mr-1"></i>
                                        {{ livre.createdAtFormatted }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Créé par:</td>
                                    <td>
                                        <i class="fas fa-user-plus text-success mr-1"></i>
                                        {% if livre.createdBy %}
                                            {{ livre.createdBy.username ?: livre.createdBy.email }}
                                        {% else %}
                                            <span class="text-muted">Système</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Modifié le:</td>
                                    <td>
                                        <i class="fas fa-calendar-check text-warning mr-1"></i>
                                        {{ livre.updatedAtFormatted }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Modifié par:</td>
                                    <td>
                                        <i class="fas fa-user-edit text-warning mr-1"></i>
                                        {% if livre.updatedBy %}
                                            {{ livre.updatedBy.username ?: livre.updatedBy.email }}
                                        {% else %}
                                            <span class="text-muted">Système</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- PDF Access Section -->
    {% if livre.pdf %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-danger">
                        <i class="fas fa-file-pdf mr-2"></i>Accès au Document PDF
                    </h6>
                </div>
                <div class="card-body">
                    {% set canAccessPdf = false %}
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            {% set canAccessPdf = true %}
                        {% elseif livre.createdBy == app.user %}
                            {% set canAccessPdf = true %}
                        {% else %}
                            {% for loan in livre.loans %}
                                {% if loan.user == app.user and (loan.status == 'active' or loan.status == 'overdue') %}
                                    {% set canAccessPdf = true %}
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endif %}

                    {% if canAccessPdf %}
                        <!-- User has access to PDF (owner or active borrower) -->
                        <div class="alert alert-success mb-3">
                            <i class="fas fa-check-circle mr-2"></i>
                            <strong>Accès PDF autorisé</strong><br>
                            <small>Vous pouvez consulter et télécharger le document PDF de ce livre.</small>
                        </div>

                        <div class="text-center mb-3">
                            <a href="{{ path('app_pdf_view', {'id': livre.id}) }}" class="btn btn-danger btn-lg mr-2" target="_blank">
                                <i class="fas fa-eye mr-1"></i>Lire en plein écran
                            </a>
                            <a href="{{ path('app_pdf_download', {'id': livre.id}) }}" class="btn btn-outline-danger btn-lg">
                                <i class="fas fa-download mr-1"></i>Télécharger PDF
                            </a>
                        </div>

                        <div class="pdf-viewer-container border rounded" style="height: 600px;">
                            <iframe src="{{ path('app_pdf_view', {'id': livre.id}) }}" width="100%" height="100%" style="border: none; border-radius: 5px;">
                                Votre navigateur ne supporte pas l'affichage des PDF.
                                <a href="{{ path('app_pdf_download', {'id': livre.id}) }}">Téléchargez le PDF</a>
                            </iframe>
                        </div>
                    {% else %}
                        <!-- User doesn't have access to PDF -->
                        <div class="text-center py-5">
                            <i class="fas fa-lock fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted mb-3">Accès PDF Restreint</h5>
                            <p class="text-muted mb-4">
                                Le document PDF n'est accessible qu'aux propriétaires du livre et aux emprunteurs actifs.
                            </p>

                            {% if livre.isBorrowable %}
                                {% if livre.isAvailableForBorrowing() %}
                                    <!-- Book is available for borrowing -->
                                    <a href="{{ path('app_borrowing_request', {'id': livre.id}) }}" class="btn btn-primary btn-lg mr-2">
                                        <i class="fas fa-book-reader mr-2"></i>Emprunter pour accéder au PDF
                                    </a>
                                {% else %}
                                    <!-- Book not available - show reservation option -->
                                    <div class="alert alert-warning mb-3">
                                        <i class="fas fa-clock mr-2"></i>
                                        <strong>Livre indisponible actuellement</strong><br>
                                        <small>Inscrivez-vous à la liste d'attente pour accéder au PDF dès qu'il sera disponible.</small>
                                    </div>
                                    <a href="{{ path('app_borrowing_request', {'id': livre.id}) }}" class="btn btn-outline-primary btn-lg">
                                        <i class="fas fa-list mr-2"></i>M'inscrire à la liste d'attente
                                    </a>
                                {% endif %}
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    Ce livre n'est pas disponible à l'emprunt.
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- PDF Modal -->
    {% if livre.pdf %}
        {% set canAccessPdf = false %}
        {% if app.user %}
            {% if livre.createdBy == app.user %}
                {% set canAccessPdf = true %}
            {% else %}
                {% for loan in livre.loans %}
                    {% if loan.user == app.user and (loan.status == 'active' or loan.status == 'overdue') %}
                        {% set canAccessPdf = true %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endif %}

        {% if canAccessPdf %}
        <div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger" id="pdfModalLabel">
                            <i class="fas fa-file-pdf mr-2"></i>{{ livre.titre }} - Document PDF
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-0">
                        <iframe src="{{ path('app_pdf_view', {'id': livre.id}) }}" width="100%" height="80vh" style="border: none;">
                            Votre navigateur ne supporte pas l'affichage des PDF.
                            <a href="{{ path('app_pdf_download', {'id': livre.id}) }}">Téléchargez le PDF</a>
                        </iframe>
                    </div>
                    <div class="modal-footer">
                        <a href="{{ path('app_pdf_download', {'id': livre.id}) }}" target="_blank" class="btn btn-danger">
                            <i class="fas fa-download mr-1"></i>Télécharger PDF
                        </a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    {% endif %}

    <!-- Reviews Section -->
    {% if is_granted('ROLE_USER') %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-star mr-2"></i>Avis et Commentaires
                    </h6>
                </div>
                <div class="card-body">
                    {% set userReview = null %}
                    {% for review in livre.reviews %}
                        {% if review.user == app.user %}
                            {% set userReview = review %}
                        {% endif %}
                    {% endfor %}

                    {% if userReview %}
                        <div class="alert alert-info">
                            <h6 class="font-weight-bold mb-2">
                                <i class="fas fa-user mr-1"></i>Votre avis
                            </h6>
                            <div class="mb-2">
                                {% for i in 1..5 %}
                                    <i class="fas fa-star {% if i <= userReview.rating %}text-warning{% else %}text-muted{% endif %}"></i>
                                {% endfor %}
                                <span class="ml-2">{{ userReview.rating }}/5</span>
                                {% if userReview.verified %}
                                    <span class="badge badge-success ml-2">
                                        <i class="fas fa-check-circle mr-1"></i>Vérifié
                                    </span>
                                {% endif %}
                            </div>
                            {% if userReview.comment %}
                                <p class="mb-2">{{ userReview.comment }}</p>
                            {% endif %}
                            {% if userReview.images %}
                                <div class="row mb-2">
                                    {% for image in userReview.images %}
                                        <div class="col-md-3 col-sm-6 mb-2">
                                            <img src="{{ asset('uploads/review_images/' ~ image) }}" alt="Review image" class="img-fluid rounded" style="max-height: 100px; object-fit: cover; cursor: pointer;" onclick="openImageModal('{{ asset('uploads/review_images/' ~ image) }}')">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Publié le {{ userReview.createdAt|date('d/m/Y à H:i') }}</small>
                                <div>
                                    <a href="{{ path('app_review_edit', {'id': userReview.id}) }}" class="btn btn-sm btn-outline-primary mr-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_review_delete', {'id': userReview.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer votre avis ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userReview.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center mb-3">
                            <a href="{{ path('app_review_create', {'id': livre.id}) }}" class="btn btn-primary">
                                <i class="fas fa-plus mr-1"></i>Laisser un avis
                            </a>
                        </div>
                    {% endif %}

                    {% if livre.reviews|length > 0 %}
                        <hr>
                        <h6 class="font-weight-bold mb-3">
                            <i class="fas fa-comments mr-2"></i>Tous les avis ({{ livre.reviews|length }})
                        </h6>
                        {% for review in livre.reviews %}
                        <div class="review-item mb-4 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center">
                                    {% if review.user.profilePicture %}
                                        <img src="{{ asset('uploads/profile_pictures/' ~ review.user.profilePicture) }}" alt="Profile" class="rounded-circle mr-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    {% else %}
                                        <div class="bg-gradient-purple rounded-circle d-flex align-items-center justify-content-center mr-2" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-white" style="font-size: 16px;"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <strong>{{ review.user.username ?: review.user.email }}</strong>
                                        <div class="mb-1">
                                            {% for i in 1..5 %}
                                                <i class="fas fa-star {% if i <= review.rating %}text-warning{% else %}text-muted{% endif %}"></i>
                                            {% endfor %}
                                            <span class="ml-2 small">{{ review.rating }}/5</span>
                                            {% if review.verified %}
                                                <span class="badge badge-success ml-2" style="font-size: 10px;">
                                                    <i class="fas fa-check-circle mr-1"></i>Vérifié
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <small class="text-muted">{{ review.createdAt|date('d/m/Y H:i') }}</small>
                            </div>
                            {% if review.comment %}
                                <p class="mb-2">{{ review.comment }}</p>
                            {% endif %}
                            {% if review.images %}
                                <div class="row mb-2">
                                    {% for image in review.images %}
                                        <div class="col-md-3 col-sm-6 mb-2">
                                            <img src="{{ asset('uploads/review_images/' ~ image) }}" alt="Review image" class="img-fluid rounded" style="max-height: 120px; object-fit: cover; cursor: pointer;" onclick="openImageModal('{{ asset('uploads/review_images/' ~ image) }}')">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <div class="d-flex justify-content-between align-items-center">
                                <form method="post" action="{{ path('app_review_helpful', {'id': review.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('helpful' ~ review.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-thumbs-up mr-1"></i>Utile ({{ review.helpful }})
                                    </button>
                                </form>
                                {% if review.user == app.user %}
                                    <div>
                                        <a href="{{ path('app_review_edit', {'id': review.id}) }}" class="btn btn-sm btn-outline-primary mr-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_review_delete', {'id': review.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer votre avis ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

