{% extends 'backendofficebase.html.twig' %}

{% block title %}Détails du Livre - {{ livre.titre }}{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">{{ livre.titre }}</h1>
            <small class="text-muted">Détails complets du livre</small>
        </div>
        <div>
            <a href="{{ path('app_livre_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
            {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Book Cover and Basic Info -->
    <div class="row mb-4">
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-gradient-primary text-white text-center py-3">
                    <h5 class="mb-0 font-weight-bold">{{ livre.titre }}</h5>
                </div>
                <div class="card-body text-center">
                    {% if livre.image %}
                        <img src="{{ asset('uploads/images/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-fluid rounded shadow mb-3" style="max-width: 250px;">
                    {% else %}
                        <div class="bg-light rounded p-4 mb-3">
                            <i class="fas fa-book fa-5x text-gray-300"></i>
                        </div>
                    {% endif %}

                    {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
                    <div class="mb-3">
                        <span class="badge badge-primary badge-pill px-2 py-1 mr-1">
                            <i class="fas fa-shopping-cart mr-1"></i>Vente: {{ livre.stockVente }}
                        </span>
                        <span class="badge badge-info badge-pill px-2 py-1">
                            <i class="fas fa-book-reader mr-1"></i>Emprunt: {{ livre.stockEmprunt }}
                        </span>
                    </div>
                    {% endif %}

                    <!-- Sale Stock Status -->
                    <div class="mb-2">
                        {% if availableSaleCopies > 0 %}
                            <span class="badge badge-success badge-pill px-3 py-2">
                                <i class="fas fa-shopping-cart mr-1"></i>En stock ({{ availableSaleCopies }} à vendre)
                            </span>
                        {% else %}
                            <span class="badge badge-danger badge-pill px-3 py-2">
                                <i class="fas fa-times-circle mr-1"></i>Épuisé (vente)
                            </span>
                        {% endif %}
                    </div>

                    <!-- Borrowable Status -->
                    <div class="mb-3">
                        {% set reservationsCount = livre.activeReservationsCount %}
                        {% if livre.isBorrowable %}
                            {% if isAvailable %}
                                <span class="badge badge-success badge-pill px-3 py-2">
                                    <i class="fas fa-book-open mr-1"></i>Emprunt dispo ({{ availableCopies }}/{{ livre.stockEmprunt }})
                                </span>
                                {% if reservationsCount > 0 %}
                                    <span class="badge badge-info badge-pill px-3 py-2 ml-1">
                                        <i class="fas fa-users mr-1"></i>{{ reservationsCount }} en attente
                                    </span>
                                {% endif %}
                            {% else %}
                                <span class="badge badge-danger badge-pill px-3 py-2">
                                    <i class="fas fa-book-reader mr-1"></i>Tous empruntés ({{ activeLoansCount }}/{{ livre.stockEmprunt }})
                                </span>
                                {% if reservationsCount > 0 %}
                                    <span class="badge badge-warning badge-pill px-3 py-2 ml-1">
                                        <i class="fas fa-list-ol mr-1"></i>{{ reservationsCount }} réservation{{ reservationsCount > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                            {% endif %}
                        {% else %}
                            <span class="badge badge-secondary badge-pill px-3 py-2">
                                <i class="fas fa-ban mr-1"></i>Non empruntable
                            </span>
                        {% endif %}
                    </div>

                    <h3 class="text-success font-weight-bold mb-0">{{ livre.prix }} €</h3>
                    <small class="text-muted">Prix unitaire</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Informations Principales
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">ID:</td>
                                    <td>#{{ livre.id }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Titre:</td>
                                    <td class="font-weight-bold">{{ livre.titre }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">ISBN:</td>
                                    <td>{{ livre.isbn }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Pages:</td>
                                    <td>{{ livre.nbPages }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Prix:</td>
                                    <td class="text-success font-weight-bold">{{ livre.prix }} €</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Date édition:</td>
                                    <td>{{ livre.dateEdition|date('d/m/Y') }}</td>
                                </tr>
                                {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
                                <tr>
                                    <td class="font-weight-bold text-muted">Stock Vente:</td>
                                    <td><span class="badge badge-success">{{ livre.stockVente }}</span></td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Stock Emprunt:</td>
                                    <td><span class="badge badge-info">{{ livre.stockEmprunt }}</span></td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Total Exemplaires:</td>
                                    <td>{{ livre.nbExemplaires }}</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Valeur totale:</td>
                                    <td class="text-info font-weight-bold">{{ (livre.prix * livre.nbExemplaires)|number_format(2, ',', ' ') }} €</td>
                                </tr>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Author Information -->
            {% if livre.auteur %}
            <div class="card shadow mb-4 border-left-success">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-user mr-2"></i>Informations sur l'Auteur
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="font-weight-bold text-success mb-2">{{ livre.auteur.prenom }} {{ livre.auteur.nom }}</h5>
                            {% if livre.auteur.biographie %}
                                <p class="text-muted mb-0">{{ livre.auteur.biographie|slice(0, 150) ~ (livre.auteur.biographie|length > 150 ? '...' : '') }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-right">
                            <a href="{{ path('app_auteur_show', {'id': livre.auteur.id}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-eye mr-1"></i>Voir le profil complet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Category Information -->
            {% if livre.categorie %}
            <div class="card shadow mb-4 border-left-info">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-tag mr-2"></i>Informations sur la Catégorie
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="font-weight-bold text-info mb-2">{{ livre.categorie.designation }}</h5>
                            {% if livre.categorie.description %}
                                <p class="text-muted mb-0">{{ livre.categorie.description }}</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-right">
                            <a href="{{ path('app_categorie_show', {'id': livre.categorie.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye mr-1"></i>Voir la catégorie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Publisher Information -->
            {% if livre.editeur %}
            <div class="card shadow mb-4 border-left-warning">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-building mr-2"></i>Informations sur l'Éditeur
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="font-weight-bold text-warning mb-2">{{ livre.editeur.nomEditeur }}</h5>
                            <p class="text-muted mb-1">
                                <i class="fas fa-map-marker-alt mr-1"></i>{{ livre.editeur.pays }}
                            </p>
                            <p class="text-muted mb-0">
                                <i class="fas fa-phone mr-1"></i>{{ livre.editeur.telephone }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted mb-0">
                                <i class="fas fa-address-card mr-1"></i>{{ livre.editeur.adresse }}
                            </p>
                            <div class="mt-3">
                                <a href="{{ path('app_editeur_show', {'id': livre.editeur.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-eye mr-1"></i>Voir le profil complet
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- User Actions -->
            {% if is_granted('ROLE_USER') %}
            <div class="card shadow mb-4 border-left-primary">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #009688 0%, #4CAF50 100%); color: white;">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-user mr-2"></i>Mes Actions
                    </h6>
                </div>
                <div class="card-body">
                    {% set userProgress = null %}
                    {% for progress in app.user.readingProgress %}
                        {% if progress.livre.id == livre.id %}
                            {% set userProgress = progress %}
                        {% endif %}
                    {% endfor %}

                    {% set hasActiveLoan = false %}
                    {% for loan in app.user.loans %}
                        {% if loan.livre.id == livre.id and (loan.status == 'active' or loan.status == 'approved') %}
                            {% set hasActiveLoan = true %}
                        {% endif %}
                    {% endfor %}

                    {% set hasPurchasedBook = false %}
                    {% for purchasedBook in app.user.purchasedBooks %}
                        {% if purchasedBook.id == livre.id %}
                            {% set hasPurchasedBook = true %}
                        {% endif %}
                    {% endfor %}

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Wishlist Button -->
                            <form action="{{ path('app_user_wishlist_add', {'id': livre.id}) }}" method="post" class="mb-3">
                                <input type="hidden" name="_token" value="{{ csrf_token('add-wishlist-' ~ livre.id) }}">
                                <button type="submit" class="btn btn-success btn-block font-weight-bold"
                                        style="background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%); border: none;">
                                    <i class="fas fa-heart mr-2"></i>Ajouter à ma liste de souhaits
                                </button>
                            </form>

                            <!-- Purchase/Add to Cart Logic -->
                            {% if hasPurchasedBook %}
                                <!-- User owns this book -->
                                <div class="alert alert-success mb-3">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <strong>Livre possédé</strong><br>
                                    <small>Vous avez acheté ce livre.</small>
                                    <br><a href="{{ path('app_user_owned_books') }}" class="btn btn-sm btn-success mt-2">
                                        <i class="fas fa-book mr-1"></i>Voir mes livres achetés
                                    </a>
                                </div>
                            {% else %}
                                <!-- User doesn't own this book - show Add to Cart -->
                                {% if availableSaleCopies > 0 %}
                                <form action="{{ path('app_cart_add', {'id': livre.id}) }}" method="post" class="mb-3">
                                    <input type="hidden" name="_token" value="{{ csrf_token('add-cart-' ~ livre.id) }}">
                                    <input type="hidden" name="quantity" value="1">
                                    <button type="submit" class="btn btn-primary btn-block font-weight-bold"
                                            style="background: linear-gradient(135deg, #009688 0%, #26A69A 100%); border: none;">
                                        <i class="fas fa-shopping-cart mr-2"></i>Ajouter au panier ({{ availableSaleCopies }} dispo)
                                    </button>
                                </form>
                                {% else %}
                                <div class="alert alert-warning mb-3">
                                    <i class="fas fa-exclamation-triangle mr-2"></i>
                                    <strong>Rupture de stock (vente)</strong><br>
                                    <small>Ce livre n'est plus disponible à la vente.</small>
                                </div>
                                {% endif %}
                            {% endif %}

                            <!-- Borrowing Logic (only if not purchased and borrowable) -->
                            {% if not hasPurchasedBook and livre.isBorrowable %}
                                {% if hasActiveLoan %}
                                    <!-- User has active loan -->
                                    <div class="alert alert-info mb-3">
                                        <i class="fas fa-info-circle mr-2"></i>
                                        <strong>Emprunt en cours</strong><br>
                                        <small>Vous avez déjà un emprunt actif pour ce livre.</small>
                                        <br><a href="{{ path('app_loan_index') }}" class="btn btn-sm btn-info mt-2">Voir mes emprunts</a>
                                    </div>
                                {% elseif hasActiveReservation %}
                                    <!-- User has active reservation -->
                                    <div class="alert alert-warning mb-3">
                                        <i class="fas fa-hourglass-half mr-2"></i>
                                        <strong>Réservation en cours</strong><br>
                                        <small>Position: <strong>#{{ userReservation.position }}</strong></small><br>
                                        <small>Disponible vers: <strong>{{ userReservation.expectedAvailableDateFormatted }}</strong></small>
                                        <br><a href="{{ path('app_reservation_view', {'id': userReservation.id}) }}" class="btn btn-sm btn-warning mt-2">Voir ma réservation</a>
                                    </div>
                                {% elseif isAvailable %}
                                    <!-- Book is available for borrowing -->
                                    <a href="{{ path('app_borrowing_request', {'id': livre.id}) }}" class="btn btn-warning btn-block font-weight-bold mb-3"
                                       style="background: linear-gradient(135deg, #FF6F00 0%, #FF9800 100%); border: none; color: white;">
                                        <i class="fas fa-book-reader mr-2"></i>Demander un emprunt
                                    </a>
                                {% else %}
                                    <!-- Book not available - show reservation option -->
                                    <div class="alert alert-danger mb-3">
                                        <i class="fas fa-ban mr-2"></i>
                                        <strong>Tous les exemplaires sont empruntés</strong><br>
                                        <small>Ce livre est actuellement indisponible.</small>
                                        <br><a href="{{ path('app_borrowing_request', {'id': livre.id}) }}" class="btn btn-outline-warning btn-sm mt-2">
                                            <i class="fas fa-list mr-1"></i>M'inscrire à la liste d'attente
                                        </a>
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <!-- Reading Progress Section -->
                            {% set canAccessProgress = false %}
                            {% if app.user %}
                                {% if livre.createdBy == app.user %}
                                    {% set canAccessProgress = true %}
                                {% else %}
                                    {# Check if user has active/overdue loan #}
                                    {% for loan in livre.loans %}
                                        {% if loan.user == app.user and (loan.status == 'active' or loan.status == 'overdue') %}
                                            {% set canAccessProgress = true %}
                                        {% endif %}
                                    {% endfor %}
                                    
                                    {# Check if user purchased this book #}
                                    {% if not canAccessProgress %}
                                        {% for purchasedBook in app.user.purchasedBooks %}
                                            {% if purchasedBook.id == livre.id %}
                                                {% set canAccessProgress = true %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}

                            {% if canAccessProgress %}
                                {% set userProgress = null %}
                                {% for progress in app.user.readingProgress %}
                                    {% if progress.livre.id == livre.id %}
                                        {% set userProgress = progress %}
                                    {% endif %}
                                {% endfor %}

                                {% if userProgress %}
                                    <div class="mb-3">
                                        <h6 class="font-weight-bold text-info mb-2">
                                            <i class="fas fa-chart-line mr-1"></i>Progression de Lecture
                                        </h6>
                                        <div class="progress mb-2" style="height: 12px;">
                                            <div class="progress-bar {% if userProgress.isCompleted %}bg-success{% else %}bg-info{% endif %}"
                                                 role="progressbar" style="width: {{ userProgress.progressPercentage }}%"></div>
                                        </div>
                                        <small class="text-muted">
                                            {{ userProgress.progressPercentage }}% terminé
                                            {% if userProgress.isCompleted %}
                                                <span class="badge badge-success ml-1">Terminé</span>
                                            {% endif %}
                                        </small>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                Page {{ userProgress.currentPage ?: 0 }} sur {{ livre.nbPages }}
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Reading Progress Button -->
                                    <a href="{{ path('app_reading_progress_show', {'id': livre.id}) }}" class="btn btn-info btn-block mb-2">
                                        <i class="fas fa-chart-line mr-1"></i>Voir ma progression détaillée
                                    </a>

                                    {% if userProgress.isCompleted %}
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle mr-1"></i>
                                        <strong>Livre terminé!</strong> Vous pouvez maintenant laisser un avis.
                                    </div>
                                    {% endif %}
                                {% else %}
                                    <!-- Start Reading Button -->
                                    <div class="mb-3">
                                        <h6 class="font-weight-bold text-success mb-2">
                                            <i class="fas fa-play-circle mr-1"></i>Commencer la lecture
                                        </h6>
                                        <p class="small text-muted mb-3">
                                            Suivez votre progression de lecture avec des marque-pages et des notes personnelles.
                                        </p>
                                        <a href="{{ path('app_reading_progress_show', {'id': livre.id}) }}" class="btn btn-success btn-block">
                                            <i class="fas fa-play mr-1"></i>Commencer à lire
                                        </a>
                                    </div>
                                {% endif %}

                                <!-- PDF Access (for owners and active borrowers) -->
                                {% if livre.pdf %}
                                    <div class="mb-3">
                                        <h6 class="font-weight-bold text-danger mb-2">
                                            <i class="fas fa-file-pdf mr-1"></i>Accès PDF
                                        </h6>
                                        <div class="btn-group-vertical w-100">
                                            <a href="{{ path('app_pdf_view', {'id': livre.id}) }}" class="btn btn-danger btn-sm" target="_blank">
                                                <i class="fas fa-eye mr-1"></i>Lire le PDF
                                            </a>
                                            <a href="{{ path('app_pdf_download', {'id': livre.id}) }}" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-download mr-1"></i>Télécharger PDF
                                            </a>
                                        </div>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    <strong>Progression disponible</strong><br>
                                    <small>Empruntez ou achetez ce livre pour suivre votre progression de lecture et accéder aux fonctionnalités avancées.</small>
                                </div>
                            {% endif %}

                            <!-- Borrowing History Calendar Link -->
                            {% if livre.isBorrowable %}
                            <div class="mt-3">
                                <a href="{{ path('app_borrowing_calendar', {'id': livre.id}) }}" class="btn btn-outline-primary btn-block">
                                    <i class="fas fa-calendar-alt mr-1"></i>Voir mon historique d'emprunt
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
    <!-- Statistics and Insights -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar mr-2"></i>Statistiques du Livre
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="mb-3">
                                <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                                <h4 class="text-success">{{ livre.stockVente }}</h4>
                                <small class="text-muted">Stock Vente</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <i class="fas fa-book-reader fa-2x text-info mb-2"></i>
                                <h4 class="text-info">{{ livre.stockEmprunt }}</h4>
                                <small class="text-muted">Stock Emprunt</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-3">
                                <i class="fas fa-euro-sign fa-2x text-warning mb-2"></i>
                                <h4 class="text-warning">{{ (livre.prix * livre.nbExemplaires)|number_format(0, ',', ' ') }}€</h4>
                                <small class="text-muted">Valeur totale</small>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-file-alt fa-2x text-info mb-2"></i>
                                <h4 class="text-info">{{ livre.nbPages }}</h4>
                                <small class="text-muted">Nombre de pages</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <i class="fas fa-calendar fa-2x text-warning mb-2"></i>
                                <h4 class="text-warning">{{ livre.dateEdition|date('Y') }}</h4>
                                <small class="text-muted">Année d'édition</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-lightbulb mr-2"></i>Aperçus et Informations
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-muted mb-2">Prix par page</h6>
                        <p class="mb-0">{{ (livre.prix / livre.nbPages)|number_format(3, ',', ' ') }} € par page</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-muted mb-2">État du stock</h6>
                        <div class="row mb-2">
                            <div class="col-6">
