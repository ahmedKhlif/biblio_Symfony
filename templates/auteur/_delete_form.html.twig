<form method="post" action="{{ path('app_auteur_delete', {'id': auteur.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet auteur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auteur.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer cet auteur
    </button>
</form>