{% extends 'backendofficebase.html.twig' %}

{% block title %}Ajouter un Nouvel Auteur{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user-plus text-primary mr-2"></i>Ajouter un Nouvel Auteur
            </h1>
            <p class="mb-0 text-muted">Enrichissez votre bibliothèque avec de nouveaux talents littéraires</p>
        </div>
        <a href="{{ path('app_auteur_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
        </a>
    </div>

    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-success text-white shadow">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="font-weight-bold mb-2">
                                <i class="fas fa-feather-alt mr-2"></i>Bienvenue dans l'Espace Auteurs
                            </h4>
                            <p class="mb-0 opacity-75">
                                Ajoutez des auteurs talentueux à votre collection. Chaque auteur apporte sa propre histoire et enrichit votre bibliothèque.
                            </p>
                        </div>
                        <div class="col-md-4 text-right">
                            <i class="fas fa-users fa-4x opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Author Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-edit mr-2"></i>Informations de l'Auteur
            </h6>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle mr-2"></i>
                <strong>Conseils pour un profil complet:</strong>
                <ul class="mb-0 mt-2">
                    <li>Utilisez le nom complet de l'auteur tel qu'il apparaît sur ses ouvrages</li>
                    <li>La biographie, bien que optionnelle, aide à contextualiser l'œuvre de l'auteur</li>
                    <li>Vérifiez l'orthographe des noms avant de sauvegarder</li>
                </ul>
            </div>
            {{ include('auteur/_form.html.twig') }}
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Auteurs Actuels</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ auteurs|length }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Livres Totaux</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ livres|length }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Ratio Auteur/Livre</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {% if auteurs|length > 0 %}
                                    {{ (livres|length / auteurs|length)|round(1) }}
                                {% else %}
                                    0
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}