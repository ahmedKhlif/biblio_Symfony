{% extends 'backendofficebase.html.twig' %}

{% block title %}Profil de l'Auteur - {{ auteur.prenom }} {{ auteur.nom }}{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-user text-primary mr-2"></i>{{ auteur.prenom }} {{ auteur.nom }}
            </h1>
            <p class="mb-0 text-muted">Profil complet de l'auteur</p>
        </div>
        <div>
            <a href="{{ path('app_auteur_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm mr-2">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
            {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Author Profile Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-success text-white shadow">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="fas fa-user fa-2x text-success"></i>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <h3 class="font-weight-bold mb-1">{{ auteur.prenom }} {{ auteur.nom }}</h3>
                            <p class="mb-2 opacity-75">
                                <i class="fas fa-book mr-2"></i>{{ auteur.livres|length }} livre{{ auteur.livres|length > 1 ? 's' : '' }} publié{{ auteur.livres|length > 1 ? 's' : '' }}
                            </p>
                            <div class="d-flex">
                                <span class="badge badge-light mr-2">
                                    <i class="fas fa-id-card mr-1"></i>ID: {{ auteur.id }}
                                </span>
                                {% if auteur.livres|length > 0 %}
                                    <span class="badge badge-light">
                                        <i class="fas fa-star mr-1"></i>Auteur actif
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-3 text-right">
                            <div class="mb-2">
                                <h4 class="font-weight-bold mb-0">{{ auteur.livres|length }}</h4>
                                <small class="opacity-75">Publications</small>
                            </div>
                            {% if is_granted('ROLE_USER') %}
                                {% set isFavorite = false %}
                                {% for favAuteur in app.user.favoriteAuthors %}
                                    {% if favAuteur.id == auteur.id %}
                                        {% set isFavorite = true %}
                                    {% endif %}
                                {% endfor %}

                                {% if isFavorite %}
                                    <form action="{{ path('app_user_favorites_remove', {'id': auteur.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('remove-favorite-' ~ auteur.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Remove from favorites">
                                            <i class="fas fa-heart-broken"></i>
                                        </button>
                                    </form>
                                {% else %}
                                    <form action="{{ path('app_user_favorites_add', {'id': auteur.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('add-favorite-' ~ auteur.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Add to favorites">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            {% endif %}
                            <i class="fas fa-book-open fa-3x opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Author Statistics -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Livres Publiés</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ auteur.livres|length }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% set totalStock = 0 %}
        {% set totalValue = 0 %}
        {% for livre in auteur.livres %}
            {% set totalStock = totalStock + livre.nbExemplaires %}
            {% set totalValue = totalValue + (livre.prix * livre.nbExemplaires) %}
        {% endfor %}

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Exemplaires Total</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalStock }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-copy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Valeur Totale</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalValue|number_format(0, ',', ' ') }}€</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% set avgPrice = auteur.livres|length > 0 ? totalValue / auteur.livres|length : 0 %}
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Prix Moyen</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ avgPrice|number_format(1, ',', ' ') }}€</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calculator fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Author Information -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Informations Personnelles
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small font-weight-bold">IDENTIFIANT</label>
                                <div class="h6 mb-0">#{{ auteur.id }}</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small font-weight-bold">PRÉNOM</label>
                                <div class="h6 mb-0">{{ auteur.prenom }}</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small font-weight-bold">NOM</label>
                                <div class="h6 mb-0">{{ auteur.nom }}</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted small font-weight-bold">NOM COMPLET</label>
                                <div class="h6 mb-0">{{ auteur.prenom }} {{ auteur.nom }}</div>
                            </div>
                        </div>
                    </div>

                    {% if auteur.biographie %}
                    <hr>
                    <div class="mb-0">
                        <label class="text-muted small font-weight-bold">BIOGRAPHIE</label>
                        <div class="mt-2">
                            <p class="mb-0 text-justify">{{ auteur.biographie }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie mr-2"></i>Statistiques
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="chart-pie">
                            <canvas id="authorStatsChart" width="200" height="200"></canvas>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="h6 mb-0">{{ auteur.livres|length }}</div>
                            <small class="text-muted">Livres</small>
                        </div>
                        <div class="col-6">
                            <div class="h6 mb-0">{{ totalStock }}</div>
                            <small class="text-muted">Exemplaires</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Information - Admin Only -->
    {% if is_granted('ROLE_ADMIN') %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow border-left-danger">
                <div class="card-header py-3 bg-gradient-danger">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-shield-alt mr-2"></i>Informations d'Audit (Administrateur)
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Créé le:</td>
                                    <td>
                                        <i class="fas fa-calendar-plus text-success mr-1"></i>
                                        {{ auteur.createdAtFormatted }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Créé par:</td>
                                    <td>
                                        <i class="fas fa-user-plus text-success mr-1"></i>
                                        {% if auteur.createdBy %}
                                            {{ auteur.createdBy.username ?: auteur.createdBy.email }}
                                        {% else %}
                                            <span class="text-muted">Système</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="font-weight-bold text-muted" width="40%">Modifié le:</td>
                                    <td>
                                        <i class="fas fa-calendar-check text-warning mr-1"></i>
                                        {{ auteur.updatedAtFormatted }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold text-muted">Modifié par:</td>
                                    <td>
                                        <i class="fas fa-user-edit text-warning mr-1"></i>
                                        {% if auteur.updatedBy %}
                                            {{ auteur.updatedBy.username ?: auteur.updatedBy.email }}
                                        {% else %}
                                            <span class="text-muted">Système</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Livres de l'Auteur -->
    {% if auteur.livres|length > 0 %}
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-book mr-2"></i>Livres de cet Auteur ({{ auteur.livres|length }})
            </h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="booksDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="booksDropdown">
                    <div class="dropdown-header">Trier par:</div>
                    <a class="dropdown-item" href="#">Titre (A-Z)</a>
                    <a class="dropdown-item" href="#">Prix croissant</a>
                    <a class="dropdown-item" href="#">Date d'édition</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Exporter la liste</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                {% for livre in auteur.livres %}
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100">
                        <div class="card-header bg-gradient-primary text-white text-center py-2">
                            <h6 class="font-weight-bold mb-0">{{ livre.titre|slice(0, 20) ~ (livre.titre|length > 20 ? '...' : '') }}</h6>
                        </div>
                        <div class="card-body">
                            {% if livre.image %}
                                <img src="{{ asset('uploads/images/' ~ livre.image) }}" alt="{{ livre.titre }}" class="img-fluid rounded mb-3" style="height: 120px; width: 100%; object-fit: cover;">
                            {% else %}
                                <div class="text-center mb-3">
                                    <i class="fas fa-book fa-3x text-gray-300"></i>
                                </div>
                            {% endif %}

                            <div class="mb-2">
                                <small class="text-muted d-block">
                                    <i class="fas fa-tag text-info mr-1"></i>{{ livre.categorie ? livre.categorie.designation : 'N/A' }}
                                </small>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted d-block">
                                    <i class="fas fa-building text-success mr-1"></i>{{ livre.editeur ? livre.editeur.nomEditeur : 'N/A' }}
                                </small>
                            </div>

                            {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Prix</small>
                                    <span class="font-weight-bold text-success">{{ livre.prix }} €</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Stock</small>
                                    <span class="badge badge-success" title="Vente">V:{{ livre.stockVente }}</span>
                                    <span class="badge badge-info" title="Emprunt">E:{{ livre.stockEmprunt }}</span>
                                </div>
                            </div>
                            {% endif %}

                            <div class="text-center">
                                <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-primary btn-sm btn-block">
                                    <i class="fas fa-eye mr-1"></i>Voir Détails
                                </a>
                            </div>
                        </div>
                        <div class="card-footer text-center py-2">
                            <small class="text-muted">
                                <i class="fas fa-calendar mr-1"></i>{{ livre.dateEdition|date('d/m/Y') }}
                            </small>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow mb-4">
        <div class="card-body text-center py-5">
            <i class="fas fa-book-open fa-4x text-gray-300 mb-3"></i>
            <h5 class="text-muted">Aucun livre publié</h5>
            <p class="text-muted">Cet auteur n'a pas encore de livres dans notre bibliothèque.</p>
            {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_livre_new') }}" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Ajouter un livre
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <!-- Delete Card -->
    {% if is_granted('ROLE_ADMIN') %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Actions</h6>
        </div>
        <div class="card-body">
            {{ include('auteur/_delete_form.html.twig') }}
        </div>
    </div>
    {% endif %}

    <script>
        // Author Statistics Chart
        function initAuthorChart() {
            var ctx = document.getElementById("authorStatsChart");
            if (ctx) {
                // Destroy existing chart if it exists
                if (window.authorChart) {
                    window.authorChart.destroy();
                }
                
                window.authorChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ["Livres", "Exemplaires"],
                        datasets: [{
                            data: [{{ auteur.livres|length }}, {{ totalStock }}],
                            backgroundColor: ['#4e73df', '#1cc88a'],
                            hoverBackgroundColor: ['#2e59d9', '#17a673'],
                            hoverBorderColor: "rgba(234, 236, 244, 1)",
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        plugins: {
                            tooltip: {
                                backgroundColor: "rgb(255,255,255)",
                                bodyColor: "#858796",
                                borderColor: '#dddfeb',
                                borderWidth: 1,
                                padding: 15,
                                displayColors: false,
                                caretPadding: 10,
                            },
                            legend: {
                                display: false
                            }
                        },
                        cutout: '70%',
                    },
                });
            }
        }
        
        // Support both regular page load and Turbo navigation
        document.addEventListener('DOMContentLoaded', initAuthorChart);
        document.addEventListener('turbo:load', initAuthorChart);
        document.addEventListener('turbo:render', initAuthorChart);
    </script>
{% endblock %}