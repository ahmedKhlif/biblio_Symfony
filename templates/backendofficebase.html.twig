    <script>
        // Update cart count
        function updateCartCount() {
            fetch('{{ path('app_cart_count') }}')
                .then(response => response.json())
                .then(data => {
                    const cartCountElement = document.querySelector('.cart-count');
                    if (cartCountElement) {
                        cartCountElement.textContent = data.count;
                        cartCountElement.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                })
                .catch(error => console.error('Error updating cart count:', error));
        }

        // Update message count and dropdown
        function updateMessageCount() {
            fetch('{{ path('app_messages_unread_count') }}')
                .then(response => response.json())
                .then(data => {
                    const messageCountElement = document.querySelector('.message-count');
                    if (messageCountElement) {
                        messageCountElement.textContent = data.count;
                        messageCountElement.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                })
                .catch(error => console.error('Error updating message count:', error));
        }

        // Load recent messages in dropdown
        function loadRecentMessages() {
            const container = document.getElementById('messages-dropdown-content');
            if (!container) return;

            fetch('{{ path('app_messages_recent') }}')
                .then(response => response.json())
                .then(messages => {
                    if (messages.length === 0) {
                        container.innerHTML = `
                            <div class="text-center py-3 text-muted">
                                <i class="fas fa-inbox"></i><br>
                                <small>Aucun message</small>
                            </div>
                        `;
                        return;
                    }

                    let html = '';
                    messages.forEach(msg => {
                        html += `
                            <a class="dropdown-item d-flex align-items-center ${!msg.isRead ? 'bg-light' : ''}" href="{{ path('app_messages_index') }}">
                                <div class="dropdown-list-image mr-3">
                                    <img class="rounded-circle" src="${msg.senderImage}" alt="${msg.sender}" style="width: 40px; height: 40px; object-fit: cover;">
                                    <div class="status-indicator ${!msg.isRead ? 'bg-success' : ''}"></div>
                                </div>
                                <div class="font-weight-bold" style="overflow: hidden;">
                                    <div class="text-truncate" style="max-width: 200px;">${msg.subject}</div>
                                    <div class="small text-gray-500">${msg.sender} · ${msg.timeAgo}</div>
                                </div>
                            </a>
                        `;
                    });
                    container.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error loading messages:', error);
                    container.innerHTML = `
                        <div class="text-center py-3 text-muted">
                            <small>Erreur de chargement</small>
                        </div>
                    `;
                });
        }

        // Update cart count on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount();
            updateMessageCount();

            // Load messages when dropdown is opened
            const messagesDropdown = document.getElementById('messagesDropdown');
            if (messagesDropdown) {
                messagesDropdown.addEventListener('click', function() {
                    loadRecentMessages();
                });
            }

            // Search Autocomplete
            const searchInput = document.getElementById('navbarSearchInput');
            const autocompleteDropdown = document.getElementById('searchAutocomplete');
            let searchTimeout = null;

            if (searchInput && autocompleteDropdown) {
                console.log('Search autocomplete initialized'); // Debug
                
                searchInput.addEventListener('input', function() {
                    const query = this.value.trim();
