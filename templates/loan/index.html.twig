{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Search functionality
    const searchInput = document.getElementById('loanSearch');
    const loanRows = document.querySelectorAll('.loan-row');

    if (searchInput && loanRows.length > 0) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();

            loanRows.forEach(row => {
                const bookTitle = row.dataset.bookTitle || '';
                const author = row.dataset.author || '';
                const isVisible = bookTitle.includes(searchTerm) || author.includes(searchTerm);

                row.style.display = isVisible ? '' : 'none';

                // Add fade effect
                if (isVisible) {
                    row.style.opacity = '1';
                    row.style.transform = 'scale(1)';
                } else {
                    row.style.opacity = '0.3';
                    row.style.transform = 'scale(0.98)';
                }
            });
        });
    }

    // Add click effects to cards
    const loanCards = document.querySelectorAll('.loan-card');
    loanCards.forEach(card => {
        card.addEventListener('click', function(e) {
            // Don't trigger if clicking on a button/form
            if (e.target.tagName === 'BUTTON' || e.target.tagName === 'FORM' || e.target.closest('form')) {
                return;
            }

            // Add ripple effect
            const ripple = document.createElement('div');
            ripple.style.position = 'absolute';
            ripple.style.borderRadius = '50%';
            ripple.style.background = 'rgba(255, 255, 255, 0.3)';
            ripple.style.transform = 'scale(0)';
            ripple.style.animation = 'ripple 0.6s linear';
            ripple.style.left = (e.offsetX - 10) + 'px';
            ripple.style.top = (e.offsetY - 10) + 'px';
            ripple.style.width = '20px';
            ripple.style.height = '20px';

            this.style.position = 'relative';
            this.appendChild(ripple);

            setTimeout(() => {
                ripple.remove();
            }, 600);
        });
    });

    // Add CSS animation for ripple
    const style = document.createElement('style');
    style.textContent = `
        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);

    // Auto-refresh overdue loans indicator
    setInterval(() => {
        const overdueBadges = document.querySelectorAll('.pulse');
        overdueBadges.forEach(badge => {
            badge.style.animation = badge.style.animation ? '' : 'pulse 2s infinite';
        });
    }, 10000);
});
</script>
