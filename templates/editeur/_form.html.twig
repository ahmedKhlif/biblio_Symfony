{{ form_start(form, {'attr': {'class': 'user'}}) }}
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            {{ form_label(form.nomEditeur, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nomEditeur, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Nom de l\'éditeur'}}) }}
            {{ form_errors(form.nomEditeur) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.pays, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.pays, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Pays'}}) }}
            {{ form_errors(form.pays) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Adresse'}}) }}
        {{ form_errors(form.adresse) }}
    </div>
    <div class="form-group">
        {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Téléphone'}}) }}
        {{ form_errors(form.telephone) }}
    </div>
    <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}