<form method="post" action="{{ path('app_editeur_delete', {'id': editeur.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet éditeur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ editeur.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer cet éditeur
    </button>
</form>