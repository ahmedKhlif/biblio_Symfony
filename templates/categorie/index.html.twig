{% extends 'backendofficebase.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Gestion des Catégories</h1>
        <a href="{{ path('app_categorie_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Ajouter une Catégorie
        </a>
    </div>

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Recherche</h6>
        </div>
        <div class="card-body">
            <form method="GET" action="{{ path('app_categorie_index') }}" class="d-flex">
                <input type="text" name="search" value="{{ search|default('') }}" class="form-control" placeholder="Rechercher par désignation ou description..." style="margin-right: 10px;">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                {% if search|default('') %}
                    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Effacer
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des Catégories</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(categories, 'ID', 'c.id') }}</th>
                            <th>{{ knp_pagination_sortable(categories, 'Désignation', 'c.designation') }}</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.designation }}</td>
                            <td>{{ categorie.description }}</td>
                            <td>
                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Aucune catégorie trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    {% if categories.getPageCount() > 1 %}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(categories, 'pagination.html.twig') }}
        </div>
    {% endif %}
{% endblock %}