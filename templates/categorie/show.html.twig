{% extends 'backendofficebase.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Détails de la Catégorie</h1>
        <div>
            <a href="{{ path('app_categorie_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
            </a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Modifier
            </a>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informations de la Catégorie</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">{{ categorie.id }}</dd>

                        <dt class="col-sm-4">Désignation:</dt>
                        <dd class="col-sm-8">{{ categorie.designation }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">{{ categorie.description }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Livres de la Catégorie -->
    {% if categorie.livres|length > 0 %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Livres dans cette Catégorie ({{ categorie.livres|length }})</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Éditeur</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for livre in categorie.livres %}
                        <tr>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.auteur ? livre.auteur.prenom ~ ' ' ~ livre.auteur.nom : 'N/A' }}</td>
                            <td>{{ livre.editeur ? livre.editeur.nomEditeur : 'N/A' }}</td>
                            <td>{{ livre.prix }} €</td>
                            <td>
                                <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Delete Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Actions</h6>
        </div>
        <div class="card-body">
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}