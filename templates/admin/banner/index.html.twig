{% extends 'backendofficebase.html.twig' %}

{% block title %}Gestion des Bannières - Biblio{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-flag text-primary mr-2"></i>Gestion des Bannières
            </h1>
            <p class="text-muted small mb-0">Dashboard de gestion centralisé des bannières système</p>
        </div>
        <a href="{{ path('app_admin_banner_create') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Nouvelle Bannière
        </a>
    </div>

    <!-- Stats Cards Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-primary text-uppercase mb-1 font-weight-bold" style="font-size: 0.8rem;">Total</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ stats.total }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1 font-weight-bold" style="font-size: 0.8rem;">Actives</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ stats.active }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-warning text-uppercase mb-1 font-weight-bold" style="font-size: 0.8rem;">Programmées</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ stats.scheduled }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-danger text-uppercase mb-1 font-weight-bold" style="font-size: 0.8rem;">Inactives</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ stats.inactive }}</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-light">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter"></i> Filtres de Recherche
            </h6>
        </div>
        <div class="card-body">
            <form method="GET" class="form-inline">
                <div class="form-group mr-2 mb-2">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par titre..." value="{{ search ?? '' }}" style="min-width: 200px;">
                </div>
                <div class="form-group mr-2 mb-2">
                    <select name="status" class="form-control" style="min-width: 140px;">
                        <option value="">Tous les Statuts</option>
                        {% for key, label in statuses %}
                            <option value="{{ key }}" {% if status == key %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group mr-2 mb-2">
                    <select name="type" class="form-control" style="min-width: 140px;">
                        <option value="">Tous les Types</option>
                        {% for key, label in types %}
                            <option value="{{ key }}" {% if type == key %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <i class="fas fa-search"></i> Chercher
                </button>
                <a href="{{ path('app_admin_banner_custom') }}" class="btn btn-secondary mb-2 ml-2">
                    <i class="fas fa-redo"></i> Réinitialiser
                </a>
            </form>
        </div>
    </div>

    <!-- Banners Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list"></i> Liste des Bannières
            </h6>
            <small class="text-muted">{{ banners | length }} résultats</small>
        </div>
        {% if banners|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 30%;">Titre</th>
                            <th style="width: 12%;">Type</th>
                            <th style="width: 12%;">Statut</th>
                            <th style="width: 12%;">Position</th>
                            <th style="width: 8%;">Priorité</th>
                            <th style="width: 26%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for banner in banners %}
                            <tr>
                                <td>
                                    <div class="font-weight-bold text-gray-800">{{ banner.title }}</div>
                                    <small class="text-muted">ID: #{{ banner.id }}</small>
                                </td>
                                <td>
                                    {% set typeColors = {
                                        'promotion': 'success',
                                        'warning': 'warning',
                                        'announcement': 'info',
                                        'info': 'primary'
                                    } %}
                                    <span class="badge badge-{{ typeColors[banner.type] ?? 'secondary' }}">
                                        {{ banner.typeLabel }}
                                    </span>
                                </td>
                                <td>
                                    {% set statusColors = {
                                        'active': 'success',
                                        'inactive': 'secondary',
                                        'scheduled': 'warning',
                                        'expired': 'danger'
                                    } %}
                                    <span class="badge badge-{{ statusColors[banner.status] ?? 'secondary' }}">
                                        {{ banner.statusLabel }}
                                    </span>
                                </td>
                                <td>
                                    <small>{{ banner.positionLabel }}</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-light">{{ banner.priority ?? '—' }}</span>
                                </td>
                                <td>
                                    <div class="btn-toolbar" role="toolbar">
                                        <div class="btn-group btn-group-sm mr-2" role="group">
                                            <a href="{{ path('app_admin_banner_preview', {'id': banner.id}) }}" class="btn btn-info" title="Aperçu" data-toggle="tooltip">
                                                <i class="fas fa-eye"></i> Aperçu
                                            </a>
                                            <a href="{{ path('app_admin_banner_details', {'id': banner.id}) }}" class="btn btn-primary" title="Détails" data-toggle="tooltip">
                                                <i class="fas fa-chart-bar"></i> Stats
                                            </a>
                                        </div>
                                        <div class="btn-group btn-group-sm mr-2" role="group">
                                            <a href="{{ path('app_admin_banner_edit', {'id': banner.id}) }}" class="btn btn-warning">
                                                <i class="fas fa-edit"></i> Éditer
                                            </a>
                                            {% if banner.status == 'active' %}
                                                <form method="POST" action="{{ path('app_admin_banner_deactivate', {'id': banner.id}) }}" style="display: inline;" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('deactivate' ~ banner.id) }}">
                                                    <button type="submit" class="btn btn-warning btn-sm" title="Désactiver" data-toggle="tooltip">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                </form>
                                            {% else %}
                                                <form method="POST" action="{{ path('app_admin_banner_activate', {'id': banner.id}) }}" style="display: inline;" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ banner.id) }}">
                                                    <button type="submit" class="btn btn-success btn-sm" title="Activer" data-toggle="tooltip">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <form method="POST" action="{{ path('app_admin_banner_delete', {'id': banner.id}) }}" style="display: inline;" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ banner.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm" title="Supprimer" data-toggle="tooltip" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette bannière ?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% set totalPages = (total / pageSize) | round(0, 'ceil') %}
            {% if totalPages > 1 %}
                <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3 mb-3">
                    <ul class="pagination">
                        {% if page > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_admin_banner_custom', {'page': 1, 'status': status, 'type': type, 'search': search}) }}">Première</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_admin_banner_custom', {'page': page - 1, 'status': status, 'type': type, 'search': search}) }}">Précédente</a>
                            </li>
                        {% endif %}

                        {% for p in range(1, totalPages) %}
                            {% if p >= page - 2 and p <= page + 2 %}
                                <li class="page-item {% if p == page %}active{% endif %}">
                                    <a class="page-link" href="{{ path('app_admin_banner_custom', {'page': p, 'status': status, 'type': type, 'search': search}) }}">{{ p }}</a>
                                </li>
                            {% elseif p == page - 3 or p == page + 3 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if page < totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_admin_banner_custom', {'page': page + 1, 'status': status, 'type': type, 'search': search}) }}">Suivante</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_admin_banner_custom', {'page': totalPages, 'status': status, 'type': type, 'search': search}) }}">Dernière</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        {% else %}
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle mr-2"></i>
                    Aucune bannière ne correspond à vos critères. <a href="{{ path('app_admin_banner_create') }}" class="alert-link">Créer une nouvelle bannière</a>
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Quick Info Cards -->
    <div class="row mt-4">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie"></i> Distribution par Type
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Promotions</small>
                            <small class="font-weight-bold">{{ stats.promotion }}</small>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: {{ stats.total > 0 ? (stats.promotion / stats.total * 100) | round : 0 }}%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Avertissements</small>
                            <small class="font-weight-bold">{{ stats.warning }}</small>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: {{ stats.total > 0 ? (stats.warning / stats.total * 100) | round : 0 }}%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Annonces</small>
                            <small class="font-weight-bold">{{ stats.announcement }}</small>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: {{ stats.total > 0 ? (stats.announcement / stats.total * 100) | round : 0 }}%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Informations</small>
                            <small class="font-weight-bold">{{ stats.info }}</small>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{ stats.total > 0 ? (stats.info / stats.total * 100) | round : 0 }}%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-map-pin"></i> Distribution par Position
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless">
                        <tbody>
                            <tr>
                                <td><small class="text-muted"><i class="fas fa-arrow-up"></i> En haut</small></td>
                                <td class="text-right"><strong>{{ stats.top }}</strong></td>
                                <td style="width: 60%;">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: {{ stats.total > 0 ? (stats.top / stats.total * 100) | round : 0 }}%"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><small class="text-muted"><i class="fas fa-arrow-down"></i> En bas</small></td>
                                <td class="text-right"><strong>{{ stats.bottom }}</strong></td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: {{ stats.total > 0 ? (stats.bottom / stats.total * 100) | round : 0 }}%"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><small class="text-muted"><i class="fas fa-bars"></i> Sidebar</small></td>
                                <td class="text-right"><strong>{{ stats.sidebar }}</strong></td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: {{ stats.total > 0 ? (stats.sidebar / stats.total * 100) | round : 0 }}%"></div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><small class="text-muted"><i class="fas fa-window-maximize"></i> Popup</small></td>
                                <td class="text-right"><strong>{{ stats.popup }}</strong></td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: {{ stats.total > 0 ? (stats.popup / stats.total * 100) | round : 0 }}%"></div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-toolbar {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
    }
    
    .progress {
        height: 1rem;
        border-radius: 0.25rem;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.35rem 0.6rem;
    }
</style>

<script>
    $(function() {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
{% endblock %}
