{% extends 'backendofficebase.html.twig' %}

{% block title %}Détails Réservation #{{ reservation.id }} - Biblio{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-bookmark text-primary mr-2"></i>Réservation #{{ reservation.id }}
            </h1>
            <p class="text-muted small mb-0">Détails complets de la réservation</p>
        </div>
        <a href="{{ path('app_admin_reservation_management') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Retour à la liste
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <!-- Main Details -->
        <div class="col-lg-8">
            <!-- Reservation Info Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> Informations Réservation
                    </h6>
                    <div>
                        <span class="badge badge-{% if reservation.isActive %}success{% else %}secondary{% endif %} mr-2" style="font-size: 0.85rem;">
                            {% if reservation.isActive %}Active{% else %}Terminée{% endif %}
                        </span>
                        {% if reservation.isActive %}
                            <span class="badge badge-{% if reservation.position == 0 %}success{% else %}info{% endif %}" style="font-size: 0.85rem;">
                                Position: {% if reservation.position == 0 %}Premier{% else %}#{{ reservation.position + 1 }}{% endif %}
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <th class="text-gray-800" width="40%">ID</th>
                                    <td><span class="font-weight-bold text-gray-800">#{{ reservation.id }}</span></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Utilisateur</th>
                                    <td>
                                        <i class="fas fa-user text-muted mr-1"></i>
                                        <span class="font-weight-bold">{{ reservation.user.username }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Email</th>
                                    <td><small>{{ reservation.user.email }}</small></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <th class="text-gray-800" width="40%">Livre</th>
                                    <td>
                                        <i class="fas fa-book text-muted mr-1"></i>
                                        <span class="font-weight-bold">{{ reservation.livre.titre }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">ISBN</th>
                                    <td><small>{{ reservation.livre.isbn ?? 'N/A' }}</small></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Stock Emprunt</th>
                                    <td>
                                        <span class="badge badge-{% if reservation.livre.stockEmprunt > 0 %}success{% else %}danger{% endif %}">
                                            {{ reservation.livre.stockEmprunt }}
                                        </span>
                                        <small class="text-muted ml-1">(Vente: {{ reservation.livre.stockVente }})</small>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-alt"></i> Timeline
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless table-sm">
                        <tr>
                            <th class="text-gray-800" width="30%">Demandé le</th>
                            <td><small>{{ reservation.requestedAtFormatted }}</small></td>
                        </tr>
                        <tr>
                            <th class="text-gray-800">Notifié le</th>
                            <td>
                                {% if reservation.notifiedAt %}
                                    <i class="fas fa-bell text-success mr-1"></i>
                                    <small>{{ reservation.notifiedAtFormatted }}</small>
                                {% else %}
                                    <span class="badge badge-light"><i class="fas fa-bell-slash"></i> Non notifié</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th class="text-gray-800">Position dans la file</th>
                            <td>
                                {% if reservation.isActive %}
                                    {% if reservation.position == 0 %}
                                        <span class="badge badge-success"><i class="fas fa-star"></i> Premier - Prêt pour emprunt</span>
                                    {% else %}
                                        <span class="badge badge-info">#{{ reservation.position + 1 }}</span>
                                        <small class="text-muted ml-1">({{ reservation.position }} personne(s) avant)</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">N/A (réservation terminée)</span>
                                {% endif %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            {% if reservation.isActive and reservation.position == 0 %}
                <div class="alert alert-success shadow-sm">
                    <i class="fas fa-info-circle mr-2"></i>
                    <strong>Cette réservation est en première position!</strong>
                    {% if reservation.livre.stockEmprunt > 0 %}
                        Le livre est disponible et peut être converti en emprunt.
                    {% else %}
                        Aucun exemplaire disponible pour l'emprunt pour le moment.
                    {% endif %}
                </div>
            {% endif %}
        </div>

        <!-- Actions Sidebar -->
        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-cogs"></i> Actions
                    </h6>
                </div>
                <div class="card-body">
                    {% if reservation.isActive %}
                        {% if not reservation.notifiedAt %}
                            <form method="POST" action="{{ path('app_admin_reservation_notify', {'id': reservation.id}) }}" class="mb-2">
                                <input type="hidden" name="_token" value="{{ csrf_token('notify' ~ reservation.id) }}">
                                <button type="submit" class="btn btn-info btn-block">
                                    <i class="fas fa-bell"></i> Notifier l'utilisateur
                                </button>
                            </form>
                        {% endif %}

                        {% if reservation.position > 0 %}
                            <form method="POST" action="{{ path('app_admin_reservation_promote', {'id': reservation.id}) }}" class="mb-2">
                                <input type="hidden" name="_token" value="{{ csrf_token('promote' ~ reservation.id) }}">
                                <button type="submit" class="btn btn-warning btn-block">
                                    <i class="fas fa-arrow-up"></i> Promouvoir (+1 position)
                                </button>
                            </form>
                        {% endif %}

                        {% if reservation.position == 0 and reservation.livre.stockEmprunt > 0 %}
                            <form method="POST" action="{{ path('app_admin_reservation_create_loan', {'id': reservation.id}) }}" class="mb-2">
                                <input type="hidden" name="_token" value="{{ csrf_token('create_loan' ~ reservation.id) }}">
                                <button type="submit" class="btn btn-success btn-block">
                                    <i class="fas fa-exchange-alt"></i> Convertir en Emprunt
                                </button>
                            </form>
                        {% elseif reservation.position == 0 %}
                            <button class="btn btn-outline-secondary btn-block mb-2" disabled title="Aucun exemplaire disponible pour emprunt">
                                <i class="fas fa-exchange-alt"></i> Convertir en Emprunt
                            </button>
                            <small class="text-danger d-block mb-2 text-center">Aucun exemplaire disponible pour emprunt</small>
                        {% endif %}

                        <hr>

                        <form method="POST" action="{{ path('app_admin_reservation_cancel', {'id': reservation.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
                            <button type="submit" class="btn btn-outline-danger btn-block" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?')">
                                <i class="fas fa-times"></i> Annuler la Réservation
                            </button>
                        </form>
                    {% else %}
                        <p class="text-muted text-center mb-0">
                            <i class="fas fa-info-circle"></i> Cette réservation est terminée ou annulée
                        </p>
                    {% endif %}
                </div>
            </div>

            <!-- User Info Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user"></i> Informations Utilisateur
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-1 font-weight-bold text-gray-800">{{ reservation.user.firstName ?? '' }} {{ reservation.user.lastName ?? '' }}</p>
                    <p class="mb-1"><i class="fas fa-envelope text-muted mr-2"></i><small>{{ reservation.user.email }}</small></p>
                    {% if reservation.user.phone %}
                        <p class="mb-0"><i class="fas fa-phone text-muted mr-2"></i><small>{{ reservation.user.phone }}</small></p>
                    {% endif %}
                </div>
            </div>

            <!-- Book Info Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-book"></i> Informations Livre
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-1 font-weight-bold text-gray-800">{{ reservation.livre.titre }}</p>
                    {% if reservation.livre.auteur %}
                        <p class="mb-1"><i class="fas fa-pen text-muted mr-2"></i><small>{{ reservation.livre.auteur }}</small></p>
                    {% endif %}
                    <p class="mb-1"><i class="fas fa-barcode text-muted mr-2"></i><small>{{ reservation.livre.isbn ?? 'N/A' }}</small></p>
                    <p class="mb-0">
                        <i class="fas fa-copy text-muted mr-2"></i>
                        <small>Stock Emprunt:</small>
                        <span class="badge badge-{% if reservation.livre.stockEmprunt > 0 %}success{% else %}danger{% endif %}">
                            {{ reservation.livre.stockEmprunt }}
                        </span>
                        <small class="text-muted">(Vente: {{ reservation.livre.stockVente }})</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.8rem;
        padding: 0.35rem 0.6rem;
    }
    
    .btn-block {
        display: block;
        width: 100%;
    }
    
    .table-sm td, .table-sm th {
        padding: 0.4rem;
    }
</style>
{% endblock %}
