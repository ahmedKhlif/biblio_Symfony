{% extends 'backendofficebase.html.twig' %}

{% block title %}Gestion des Emprunts - Biblio{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-book-reader text-primary mr-2"></i>Gestion des Emprunts
            </h1>
            <p class="text-muted small mb-0">Dashboard de gestion des emprunts de livres</p>
        </div>
        <span class="badge badge-primary p-2" style="font-size: 0.9rem;">{{ total }} emprunt(s) au total</span>
    </div>

    <!-- Stats Cards Row -->
    <div class="row mb-4">
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-warning text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">Demandés</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['requested'] ?? 0 }}</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-info text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">Approuvés</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['approved'] ?? 0 }}</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">Actifs</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['active'] ?? 0 }}</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-danger text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">En Retard</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['overdue'] ?? 0 }}</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-secondary text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">Retournés</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['returned'] ?? 0 }}</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 mb-3">
            <div class="card border-left-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-dark text-uppercase mb-1 font-weight-bold" style="font-size: 0.7rem;">Annulés</div>
                    <div class="h3 mb-0 font-weight-bold text-gray-800">{{ statusCounts['cancelled'] ?? 0 }}</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-light">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter"></i> Filtres de Recherche
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="form-inline">
                <div class="form-group mr-2 mb-2">
                    <select name="status" class="form-control" style="min-width: 180px;">
                        <option value="">Tous les statuts</option>
                        {% for key, label in statuses %}
                            <option value="{{ key }}" {% if status == key %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">
                    <i class="fas fa-search"></i> Filtrer
                </button>
                {% if status %}
                    <a href="{{ path('app_admin_loan_management') }}" class="btn btn-secondary mb-2 ml-2">
                        <i class="fas fa-redo"></i> Réinitialiser
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    <!-- Loans Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-light">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list"></i> Liste des Emprunts
            </h6>
            <small class="text-muted">{{ loans|length }} résultat(s)</small>
        </div>
        {% if loans|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 15%;">Utilisateur</th>
                            <th style="width: 20%;">Livre</th>
                            <th style="width: 10%;">Statut</th>
                            <th style="width: 12%;">Demandé le</th>
                            <th style="width: 12%;">Date Retour</th>
                            <th style="width: 10%;">Jours</th>
                            <th style="width: 16%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for loan in loans %}
                            <tr class="{% if loan.status == 'overdue' %}table-danger{% elseif loan.status == 'requested' %}table-warning{% endif %}">
                                <td>
                                    <span class="font-weight-bold text-gray-800">#{{ loan.id }}</span>
                                </td>
                                <td>
                                    <div class="font-weight-bold text-gray-800">
                                        <i class="fas fa-user text-muted mr-1"></i>{{ loan.user.username }}
                                    </div>
                                    <small class="text-muted">{{ loan.user.email }}</small>
                                </td>
                                <td>
                                    <div class="font-weight-bold text-gray-800">
                                        <i class="fas fa-book text-muted mr-1"></i>{{ loan.livre.titre|length > 25 ? loan.livre.titre|slice(0, 25) ~ '...' : loan.livre.titre }}
                                    </div>
                                    <small class="text-muted">ISBN: {{ loan.livre.isbn ?? 'N/A' }}</small>
                                </td>
                                <td>
                                    {% set statusColors = {
                                        'requested': 'warning',
                                        'approved': 'info',
                                        'active': 'success',
                                        'overdue': 'danger',
                                        'returned': 'secondary',
                                        'cancelled': 'dark'
                                    } %}
                                    <span class="badge badge-{{ statusColors[loan.status] ?? 'secondary' }}">
                                        {{ loan.statusLabel }}
                                    </span>
                                </td>
                                <td>
                                    <small>{{ loan.requestedAtFormatted }}</small>
                                </td>
                                <td>
                                    <small>{{ loan.dueDateFormatted }}</small>
                                </td>
                                <td>
                                    {% if loan.daysRemaining is not null and loan.status in ['active', 'overdue'] %}
                                        {% if loan.daysRemaining < 0 %}
                                            <span class="badge badge-danger">
                                                <i class="fas fa-exclamation-triangle"></i> {{ loan.daysRemaining|abs }}j
                                            </span>
                                        {% elseif loan.daysRemaining == 0 %}
                                            <span class="badge badge-warning">Aujourd'hui</span>
                                        {% elseif loan.daysRemaining <= 3 %}
                                            <span class="badge badge-warning">{{ loan.daysRemaining }}j</span>
                                        {% else %}
                                            <span class="badge badge-success">{{ loan.daysRemaining }}j</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_admin_loan_detail', {'id': loan.id}) }}" class="btn btn-primary" title="Voir détails" data-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        {% if loan.status == 'requested' %}
                                            <form method="POST" action="{{ path('app_admin_loan_approve_action', {'id': loan.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ loan.id) }}">
                                                <button type="submit" class="btn btn-success" title="Approuver" data-toggle="tooltip">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                            <form method="POST" action="{{ path('app_admin_loan_reject_action', {'id': loan.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ loan.id) }}">
                                                <button type="submit" class="btn btn-danger" title="Rejeter" data-toggle="tooltip">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        {% elseif loan.status == 'approved' %}
                                            <form method="POST" action="{{ path('app_admin_loan_activate_action', {'id': loan.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ loan.id) }}">
                                                <button type="submit" class="btn btn-info" title="Activer" data-toggle="tooltip">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            </form>
                                        {% elseif loan.status in ['active', 'overdue'] %}
                                            <form method="POST" action="{{ path('app_admin_loan_return_action', {'id': loan.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('return' ~ loan.id) }}">
                                                <button type="submit" class="btn btn-success" title="Retourné" data-toggle="tooltip">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if totalPages > 1 %}
                <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3 mb-3">
                    <ul class="pagination">
                        {% if page > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="?page=1{% if status %}&status={{ status }}{% endif %}">Première</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page={{ page - 1 }}{% if status %}&status={{ status }}{% endif %}">Précédente</a>
                            </li>
                        {% endif %}

                        {% for i in range(max(1, page - 2), min(totalPages, page + 2)) %}
                            <li class="page-item {% if i == page %}active{% endif %}">
                                <a class="page-link" href="?page={{ i }}{% if status %}&status={{ status }}{% endif %}">{{ i }}</a>
                            </li>
                        {% endfor %}

                        {% if page < totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="?page={{ page + 1 }}{% if status %}&status={{ status }}{% endif %}">Suivante</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page={{ totalPages }}{% if status %}&status={{ status }}{% endif %}">Dernière</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        {% else %}
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle mr-2"></i>
                    Aucun emprunt ne correspond à vos critères de recherche.
                </div>
            </div>
        {% endif %}
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.35rem 0.6rem;
    }
    
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }
</style>

<script>
    $(function() {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
{% endblock %}
