{% extends "backendofficebase.html.twig" %}

{% block title %}Historique des Emprunts - Bibliothèque{% endblock %}

{% block content %}
<div class="container-fluid pt-4 px-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Historique des Emprunts</h1>
                <a href="{{ path('app_admin_loan_dashboard') }}" class="btn btn-secondary btn-sm">Retour au tableau de bord</a>
            </div>
        </div>
    </div>

    {% if loans['RETURNED']|default([]) is not empty or loans['CANCELLED']|default([]) is not empty %}
        <!-- Returned Loans Section -->
        {% if loans['RETURNED']|default([]) is not empty %}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-success">
                        <h6 class="m-0 font-weight-bold text-white">Emprunts Retournés ({{ loans['RETURNED']|length }})</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Livre</th>
                                        <th>Date de Début</th>
                                        <th>Date de Retour</th>
                                        <th>Durée</th>
                                        <th>Date de Retrait</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in loans['RETURNED'] %}
                                    <tr>
                                        <td>
                                            <strong>{{ loan.user.firstName }} {{ loan.user.lastName }}</strong>
                                            <br>
                                            <small class="text-muted">{{ loan.user.email }}</small>
                                        </td>
                                        <td>
                                            <strong>{{ loan.book.titre }}</strong>
                                            <br>
                                            <small class="text-muted">par {{ loan.book.auteur.nom }}</small>
                                        </td>
                                        <td>
                                            {{ loan.loanStartDate.format('d/m/Y') }}
                                        </td>
                                        <td>
                                            {{ loan.dueDate.format('d/m/Y') }}
                                        </td>
                                        <td>
                                            {% set startTime = loan.loanStartDate.timestamp %}
                                            {% set endTime = loan.dueDate.timestamp %}
                                            {% set duration = ((endTime - startTime) / 86400)|round(0, 'floor') %}
                                            {{ duration }} jour(s)
                                        </td>
                                        <td>
                                            {% if loan.returnedAt %}
                                                {{ loan.returnedAt.format('d/m/Y H:i') }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Cancelled Loans Section -->
        {% if loans['CANCELLED']|default([]) is not empty %}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-secondary">
                        <h6 class="m-0 font-weight-bold text-white">Emprunts Annulés ({{ loans['CANCELLED']|length }})</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Livre</th>
                                        <th>Date de Demande</th>
                                        <th>Raison</th>
                                        <th>Date d'Annulation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in loans['CANCELLED'] %}
                                    <tr class="table-secondary">
                                        <td>
                                            <strong>{{ loan.user.firstName }} {{ loan.user.lastName }}</strong>
                                            <br>
                                            <small class="text-muted">{{ loan.user.email }}</small>
                                        </td>
                                        <td>
                                            <strong>{{ loan.book.titre }}</strong>
                                            <br>
                                            <small class="text-muted">par {{ loan.book.auteur.nom }}</small>
                                        </td>
                                        <td>
                                            {{ loan.requestedAt.format('d/m/Y H:i') }}
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">Annulé</span>
                                        </td>
                                        <td>
                                            {% if loan.returnedAt %}
                                                {{ loan.returnedAt.format('d/m/Y H:i') }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong>Aucun historique</strong> pour le moment.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- History Stats -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1 small font-weight-bold">Emprunts Retournés</div>
                    <div class="h3 mb-0">{{ loans['RETURNED']|default([])|length }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-secondary text-uppercase mb-1 small font-weight-bold">Emprunts Annulés</div>
                    <div class="h3 mb-0">{{ loans['CANCELLED']|default([])|length }}</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section (Optional for future enhancement) -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Filtres Avancés</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Par Utilisateur</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Nom de l'utilisateur">
                        </div>
                        <div class="col-md-3">
                            <label>Par Livre</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Titre du livre">
                        </div>
                        <div class="col-md-3">
                            <label>Période</label>
                            <input type="date" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary btn-sm w-100">Filtrer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-success {
        border-left: 0.25rem solid #28a745 !important;
    }
    
    .border-left-secondary {
        border-left: 0.25rem solid #6c757d !important;
    }
    
    .text-success {
        color: #28a745 !important;
    }
    
    .text-secondary {
        color: #6c757d !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
{% endblock %}
