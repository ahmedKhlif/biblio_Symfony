{% extends "backendofficebase.html.twig" %}

{% block title %}Emprunts Actifs - Bibliothèque{% endblock %}

{% block content %}
<div class="container-fluid pt-4 px-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Emprunts Actifs et En Retard</h1>
                <a href="{{ path('app_admin_loan_dashboard') }}" class="btn btn-secondary btn-sm">Retour au tableau de bord</a>
            </div>
        </div>
    </div>

    {% if loans['ACTIVE']|default([]) is not empty or loans['OVERDUE']|default([]) is not empty %}
        <!-- Active Loans Section -->
        {% if loans['ACTIVE']|default([]) is not empty %}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-success">
                        <h6 class="m-0 font-weight-bold text-white">Emprunts Actifs ({{ loans['ACTIVE']|length }})</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Livre</th>
                                        <th>Date de Début</th>
                                        <th>Date de Retour</th>
                                        <th>Jours Restants</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in loans['ACTIVE'] %}
                                    <tr>
                                        <td>
                                            <strong>{{ loan.user.firstName }} {{ loan.user.lastName }}</strong>
                                            <br>
                                            <small class="text-muted">{{ loan.user.email }}</small>
                                        </td>
                                        <td>
                                            <strong>{{ loan.book.titre }}</strong>
                                            <br>
                                            <small class="text-muted">par {{ loan.book.auteur.nom }}</small>
                                        </td>
                                        <td>
                                            {{ loan.loanStartDate.format('d/m/Y') }}
                                        </td>
                                        <td>
                                            {{ loan.dueDate.format('d/m/Y') }}
                                        </td>
                                        <td>
                                            {% set now = 'now'|date('U') %}
                                            {% set dueTime = loan.dueDate.timestamp %}
                                            {% set daysLeft = ((dueTime - now) / 86400)|round(0, 'floor') %}
                                            {% if daysLeft > 0 %}
                                                <span class="badge bg-info">{{ daysLeft }} jour(s)</span>
                                            {% else %}
                                                <span class="badge bg-danger">EN RETARD</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_admin_loan_return', {'id': loan.id}) }}" 
                                               class="btn btn-info btn-sm"
                                               onclick="return confirm('Marquer comme retourné ?');">
                                                <i class="fas fa-undo"></i> Retourner
                                            </a>
                                            <a href="{{ path('app_admin_loan_extend', {'id': loan.id}) }}" 
                                               class="btn btn-warning btn-sm"
                                               onclick="return confirm('Prolonger l\'emprunt ?');">
                                                <i class="fas fa-plus"></i> Prolonger
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Overdue Loans Section -->
        {% if loans['OVERDUE']|default([]) is not empty %}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow mb-4 border-danger">
                    <div class="card-header py-3 bg-danger">
                        <h6 class="m-0 font-weight-bold text-white">Emprunts En Retard ({{ loans['OVERDUE']|length }})</h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <strong>Attention!</strong> {{ loans['OVERDUE']|length }} emprunt(s) en retard. Action requise!
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Livre</th>
                                        <th>Date de Début</th>
                                        <th>Date de Retour</th>
                                        <th>Retard</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for loan in loans['OVERDUE'] %}
                                    <tr class="table-danger">
                                        <td>
                                            <strong>{{ loan.user.firstName }} {{ loan.user.lastName }}</strong>
                                            <br>
                                            <small class="text-muted">{{ loan.user.email }}</small>
                                        </td>
                                        <td>
                                            <strong>{{ loan.book.titre }}</strong>
                                            <br>
                                            <small class="text-muted">par {{ loan.book.auteur.nom }}</small>
                                        </td>
                                        <td>
                                            {{ loan.loanStartDate.format('d/m/Y') }}
                                        </td>
                                        <td>
                                            <strong>{{ loan.dueDate.format('d/m/Y') }}</strong>
                                        </td>
                                        <td>
                                            {% set now = 'now'|date('U') %}
                                            {% set dueTime = loan.dueDate.timestamp %}
                                            {% set daysOverdue = ((now - dueTime) / 86400)|round(0, 'floor') %}
                                            <span class="badge bg-danger">{{ daysOverdue }} jour(s) de retard</span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_admin_loan_return', {'id': loan.id}) }}" 
                                               class="btn btn-warning btn-sm"
                                               onclick="return confirm('Marquer comme retourné ?');">
                                                <i class="fas fa-undo"></i> Retourner
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

    {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong>Excellent!</strong> Aucun emprunt actif ni en retard.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Summary Stats -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1 small font-weight-bold">Emprunts Actifs</div>
                    <div class="h3 mb-0">{{ loans['ACTIVE']|default([])|length }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-danger text-uppercase mb-1 small font-weight-bold">Emprunts En Retard</div>
                    <div class="h3 mb-0">{{ loans['OVERDUE']|default([])|length }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-info text-uppercase mb-1 small font-weight-bold">Total en Circulation</div>
                    <div class="h3 mb-0">{{ (loans['ACTIVE']|default([])|length) + (loans['OVERDUE']|default([])|length) }}</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-success {
        border-left: 0.25rem solid #28a745 !important;
    }
    
    .border-left-danger {
        border-left: 0.25rem solid #dc3545 !important;
    }
    
    .border-left-info {
        border-left: 0.25rem solid #17a2b8 !important;
    }
    
    .text-success {
        color: #28a745 !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
    
    .text-info {
        color: #17a2b8 !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
{% endblock %}
