{% extends 'backendofficebase.html.twig' %}

{% block title %}Test Order Emails - BiblioApp{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-envelope"></i> Test Order Emails
        </h1>
        <a href="{{ path('backoffice_emails_index') }}" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-success">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-shopping-cart"></i> Commandes Disponibles ({{ totalOrders }})
                    </h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>ID</th>
                                <th>N° Commande</th>
                                <th>Client</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Créée</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if orders|length == 0 %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="fas fa-inbox fa-2x mb-2"></i><br>
                                        Aucune commande trouvée
                                    </td>
                                </tr>
                            {% else %}
                                {% for order in orders %}
                                    <tr>
                                        <td><strong>#{{ order.id }}</strong></td>
                                        <td><strong>{{ order.orderNumber }}</strong></td>
                                        <td>
                                            <small>{{ order.user.email }}</small><br>
                                            <strong>{{ order.user.firstName }} {{ order.user.lastName }}</strong>
                                        </td>
                                        <td><strong>{{ order.totalAmount }} {{ order.currency }}</strong></td>
                                        <td>
                                            {% if order.status == 'pending' %}
                                                <span class="badge badge-warning">En attente</span>
                                            {% elseif order.status == 'paid' %}
                                                <span class="badge badge-info">Payée</span>
                                            {% elseif order.status == 'shipped' %}
                                                <span class="badge badge-primary">Expédiée</span>
                                            {% elseif order.status == 'delivered' %}
                                                <span class="badge badge-success">Livrée</span>
                                            {% elseif order.status == 'cancelled' %}
                                                <span class="badge badge-danger">Annulée</span>
                                            {% else %}
                                                <span class="badge badge-secondary">{{ order.status }}</span>
                                            {% endif %}
                                        </td>
                                        <td><small>{{ order.createdAt|date('d/m/Y H:i') }}</small></td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('backoffice_test_order_shipped', {orderId: order.id}) }}" 
                                                   class="btn btn-primary btn-sm"
                                                   title="Test email d'expédition"
                                                   onclick="return confirm('Envoyer email d\'expédition?')">
                                                    <i class="fas fa-truck"></i>
                                                </a>
                                                <a href="{{ path('backoffice_test_order_delivered', {orderId: order.id}) }}" 
                                                   class="btn btn-success btn-sm"
                                                   title="Test email de livraison"
                                                   onclick="return confirm('Envoyer email de livraison?')">
                                                    <i class="fas fa-check-circle"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            {% if totalPages > 1 %}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {% if currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('backoffice_emails_orders', {page: 1}) }}">Première</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{ path('backoffice_emails_orders', {page: currentPage - 1}) }}">Précédente</a>
                            </li>
                        {% endif %}

                        {% for p in 1..totalPages %}
                            {% if p == currentPage %}
                                <li class="page-item active">
                                    <span class="page-link">{{ p }}</span>
                                </li>
                            {% elseif p >= currentPage - 2 and p <= currentPage + 2 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('backoffice_emails_orders', {page: p}) }}">{{ p }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if currentPage < totalPages %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('backoffice_emails_orders', {page: currentPage + 1}) }}">Suivante</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="{{ path('backoffice_emails_orders', {page: totalPages}) }}">Dernière</a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
