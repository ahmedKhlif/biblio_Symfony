        }
        .info-box {
            background: #e8f5e9;
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
            border-left: 4px solid #4caf50;
        }
        .warning-box {
            background: #fff3cd;
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
            border-left: 4px solid #ff9800;
        }
        .danger-box {
            background: #ffebee;
            padding: 15px;
            margin: 20px 0;
            border-radius: 5px;
